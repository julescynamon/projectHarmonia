---
interface Props {
  title: string;
  excerpt: string;
  image: string;
  category: string;
  date: string;
  slug: string;
}

const { title, excerpt, image, category, date, slug } = Astro.props;
---

<article 
  class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow"
  data-aos="fade-up"
>
  <div class="aspect-w-16 aspect-h-9 overflow-hidden">
    <img
      src={image}
      alt={title}
      loading="lazy"
      class="object-cover w-full h-full transform hover:scale-105 transition-transform duration-300"
    />
  </div>
  <div class="p-6">
    <div class="flex items-center gap-4 mb-4">
      <span class="text-sm text-primary font-medium">{category}</span>
      <span class="text-sm text-gray-500">{date}</span>
    </div>
    <h3 class="text-xl font-semibold mb-2 font-serif">{title}</h3>
    <p class="text-gray-600 mb-4 line-clamp-2">{excerpt}</p>
    <a
      href={`/blog/${slug}`}
      class="text-primary hover:text-primary/80 font-medium inline-flex items-center gap-2"
    >
      Lire la suite
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
    </a>
  </div>
</article>
const { post } = Astro.props;

// Si l'article est publié
if (post.data.status === 'published') {
  try {
    console.log('Tentative d\'envoi de notification pour:', post.data.title);
    const response = await fetch('http://localhost:4321/api/blog/notify', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ slug: post.slug }),
    });

    if (!response.ok) {
      const error = await response.text();
      console.error('Erreur lors de l\'envoi de la notification:', error);
    } else {
      const result = await response.json();
      console.log('Résultat de la notification:', result);
    }
  } catch (error) {
    console.error('Erreur lors de l\'envoi de la notification:', error);
  }
}

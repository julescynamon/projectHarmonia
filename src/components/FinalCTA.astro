<section class="py-20 relative overflow-hidden">
  <!-- Fond avec texture subtile -->
  <div class="absolute inset-0 bg-gradient-to-b from-beige-50 to-sage-50 opacity-50"></div>
  
  <div class="container mx-auto px-4 relative">
    <div class="max-w-3xl mx-auto text-center space-y-12">
      <!-- Phrase inspirante -->
      <h2 class="text-3xl md:text-4xl font-playfair text-sage-900 leading-relaxed tracking-wide">
        " Et si aujourd'hui, vous faisiez le premier pas<br/>
        vers votre lumière intérieure ? "
      </h2>

      <!-- Bouton CTA -->
      <div>
        <a
          href="/contact"
          class="inline-block px-12 py-5 text-lg font-cormorant text-sage-900 bg-gradient-to-r from-amber-100 to-beige-200 rounded-full shadow-lg hover:shadow-xl hover:from-amber-200 hover:to-beige-300 hover:transform hover:-translate-y-1 transition-all duration-300 ease-in-out border border-sage-200"
        >
          Commencez votre transformation maintenant
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Import des polices Google Fonts */
  @import url('https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&display=swap');

  section {
    background-image: 
      radial-gradient(circle at 20% 20%, rgba(156, 163, 175, 0.05) 0%, transparent 200px),
      radial-gradient(circle at 80% 80%, rgba(156, 163, 175, 0.05) 0%, transparent 200px);
  }

  h2 {
    font-family: 'Dancing Script', serif;
    letter-spacing: 0.02em;
    line-height: 1.6;
  }

  a {
    font-family: 'Cormorant Garamond', serif;
    letter-spacing: 0.05em;
  }
</style>

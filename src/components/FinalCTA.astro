---
// src/components/FinalCTA.astro
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Photo de fond -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 to-black/20 z-10"></div>
    <picture class="w-full h-full">
      <!-- Version mobile (max-width: 768px) -->
      <source 
        media="(max-width: 768px)" 
        srcset="/images/final-cta-bg-mobile.webp" 
        type="image/webp"
      />
      
      <!-- Version desktop (min-width: 769px) -->
      <source 
        media="(min-width: 769px)" 
        srcset="/images/final-cta-bg.webp" 
        type="image/webp"
      />
      
      <!-- Fallback image -->
      <img
        src="/images/final-cta-bg.webp"
        alt="Background Nature"
        class="w-full h-full object-cover"
        loading="eager"
        decoding="async"
        fetchpriority="high"
      />
    </picture>
  </div>

  <!-- Contenu principal -->
  <div class="container mx-auto px-4 relative z-20">
    <div class="max-w-6xl mx-auto text-center">
      <!-- Citation qui s'écrit automatiquement -->
      <div class="animate-quote-fade-in">
        <blockquote class="text-3xl md:text-4xl lg:text-5xl text-white font-serif italic leading-relaxed max-w-5xl mx-auto drop-shadow-[0_2px_8px_rgba(0,0,0,0.5)]">
          <span id="typing-text"></span>
        </blockquote>
      </div>
    </div>
  </div>
</section>

<style>
  /* Styles pour l'élément picture */
  picture {
    display: block;
    width: 100%;
    height: 100%;
  }

  /* Mobile : image parfaitement cadrée */
  @media (max-width: 768px) {
    picture img {
      object-position: center center;
    }
  }

  /* Desktop : cadrage optimisé */
  @media (min-width: 769px) {
    picture img {
      object-position: center 20%;
    }
  }

  @keyframes quote-fade-in {
    0% { 
      opacity: 0; 
      transform: translateY(30px) scale(0.95); 
    }
    100% { 
      opacity: 1; 
      transform: translateY(0) scale(1); 
    }
  }

  .animate-quote-fade-in {
    animation: quote-fade-in 1.5s ease-out forwards;
  }

  #typing-text {
    /* Curseur supprimé */
  }

  /* Police cursive élégante comme sur la photo */
  .font-serif {
    font-family: 'Dancing Script', 'Caveat', cursive;
    font-weight: 400;
  }
</style>

<script>
  // Animation typewriter pour la citation
  function typeWriter(element, text, speed = 100) {
    let i = 0;
    element.innerHTML = '';
    
    function type() {
      if (i < text.length) {
        element.innerHTML += text.charAt(i);
        i++;
        setTimeout(type, speed);
      }
    }
    
    type();
  }

  // Démarrer l'animation quand la page est chargée
  document.addEventListener('DOMContentLoaded', function() {
    const typingElement = document.getElementById('typing-text');
    const quote = '"L\'harmonie n\'est pas à chercher au dehors, elle se révèle quand le corps, l\'énergie et l\'âme s\'accordent à nouveau."';
    
    // Attendre un peu que le fade-in soit terminé
    setTimeout(() => {
      typeWriter(typingElement, quote, 80);
    }, 1500);
  });
</script>



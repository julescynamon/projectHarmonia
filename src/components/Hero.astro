---
import Button from './ui/Button.astro';
---

<section class="relative min-h-screen flex items-center py-20 overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img
      src="/images/background-pattern.jpg"
      alt="Background Pattern"
      class="w-full h-full object-cover opacity-85"
      loading="eager"
      decoding="async"
      fetchpriority="high"
    />
    <!-- Overlay pour améliorer la lisibilité du texte -->
    <div class="absolute inset-0 bg-cream/40 backdrop-blur-[0.5px]"></div>
  </div>

  <!-- Motif de fond -->
  <div class="absolute inset-0 bg-geometric-pattern opacity-10"></div>
  
  <!-- Overlay naturel -->
  <div class="absolute inset-0 bg-nature-pattern opacity-5"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Contenu -->
      <div class="text-center lg:text-left" data-aos="fade-right" data-aos-duration="600" data-aos-offset="0">
        <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl text-ebony mb-6 drop-shadow-sm">
          HARMONIA ET VITA
        </h1>
        <p class="font-slogan text-lg md:text-xl text-eucalyptus mb-8 max-w-xl mx-auto lg:mx-0 drop-shadow-sm">
          Un équilibre entre nature, vie et lien sacré.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <Button href="/rendez-vous" size="lg">
            Prendre rendez-vous
          </Button>
          <Button href="/services" variant="outline" size="lg">
            Découvrir mes services
          </Button>
        </div>
      </div>

      <!-- Image -->
      <div class="relative" data-aos="fade-left" data-aos-duration="600" data-aos-offset="0">
        <div class="aspect-square rounded-full overflow-hidden shadow-lg">
          <img
            src="/images/logo.png"
            alt="Naima Tyzra - Naturopathe"
            class="w-full h-full object-cover"
            loading="eager"
            decoding="async"
            fetchpriority="high"
          />
        </div>
        
      </div>
    </div>

    <!-- Stats -->
    <div class="mt-20 grid grid-cols-2 md:grid-cols-4 gap-8" data-aos="fade-up" data-aos-duration="400" data-aos-offset="30">
      {[
        { number: '10+', label: 'Années d\'expérience' },
        { number: '1000+', label: 'Clients satisfaits' },
        { number: '50+', label: 'Formations suivies' },
        { number: '100%', label: 'Naturel' }
      ].map(stat => (
        <div class="text-center">
          <p class="font-heading text-3xl md:text-4xl text-gold mb-2">{stat.number}</p>
          <p class="font-slogan text-sm md:text-base text-eucalyptus">{stat.label}</p>
        </div>
      ))}
    </div>
  </div>

  <!-- Vague décorative -->
  <div class="absolute bottom-0 left-0 w-full z-[1]">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-cream/40 to-cream/80 backdrop-blur-[2px]"></div>
    <svg viewBox="0 0 1440 320" class="w-full h-auto wave-animation relative z-10" preserveAspectRatio="none">
      <path 
        fill="#A8B5A3" 
        fill-opacity="0.4" 
        d="M0,192L48,197.3C96,203,192,213,288,229.3C384,245,480,267,576,250.7C672,235,768,181,864,181.3C960,181,1056,235,1152,234.7C1248,235,1344,181,1392,154.7L1440,128L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
      ></path>
      <path 
        fill="#748C69" 
        fill-opacity="0.3" 
        d="M0,256L48,234.7C96,213,192,171,288,165.3C384,160,480,192,576,197.3C672,203,768,181,864,165.3C960,149,1056,139,1152,154.7C1248,171,1344,213,1392,234.7L1440,256L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
      ></path>
    </svg>
  </div>

</section>

<style>
  /* Ajout d'un effet de transition sur le background overlay */
  .bg-cream/60 {
    transition: opacity 0.3s ease-in-out;
  }

  /* Optimisation des animations */
  .wave-animation {
    animation: wave 20s cubic-bezier(0.36, 0, 0.66, -0.56) infinite;
    animation-delay: -10s;
    will-change: transform;
  }

  @keyframes wave {
    0% {
      transform: translateX(0) translateY(0);
    }
    50% {
      transform: translateX(-25px) translateY(15px);
    }
    100% {
      transform: translateX(0) translateY(0);
    }
  }
</style>
---
import Button from './ui/Button.astro';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden hero-section">
  <!-- Background avec overlay et effet parallax -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-b from-black/30 to-black/10 z-10"></div>
    <img
      src="/images/herobg.webp"
      alt="Background Nature"
      class="w-full h-full object-cover scale-110 transform motion-safe:animate-subtle-zoom"
      style="object-position: center 25%; /* Position optimisée pour la sculpture */"
      loading="eager"
      decoding="async"
      fetchpriority="high"
    />
  </div>

  <!-- Élément géométrie sacrée -->
  <div class="absolute inset-0 z-10 pointer-events-none overflow-hidden">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[150%] h-[150%] opacity-30 motion-safe:animate-slow-spin">
      <img
        src="/images/sacred-geometry.svg"
        alt=""
        class="w-full h-full"
        loading="eager"
      />
    </div>
  </div>

  <!-- Contenu principal -->
  <div class="container mx-auto px-4 relative z-20">
    <div class="max-w-6xl mx-auto">
      <!-- En-tête -->
      <div class="text-center mb-16">
        <h1 class="font-heading text-5xl md:text-8xl text-white mb-24 tracking-wide drop-shadow-[0_2px_8px_rgba(0,0,0,0.3)] animate-title-fade-in">
          Maison SATTVAÏA
        </h1>
        
      </div>

      <!-- Citation inspirante -->
      <div class="text-center mb-24">
        <blockquote class="text-2xl md:text-3xl text-white italic font-light max-w-3xl mx-auto leading-relaxed animate-quote-fade-in">
          "Un lieu de reconnexion où corps, énergie et âme retrouvent équilibre, harmonie et clarté intérieure."
        </blockquote>
      </div>
    </div>
  </div>
  <!-- Transition brush effect -->
  <div class="absolute bottom-0 left-0 w-full z-30 transition-divider">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-cream"></div>
    <img 
      src="/images/brush-divider.svg" 
      alt=""
      class="w-full h-auto min-h-[80px] object-cover transform motion-safe:animate-wave"
      loading="lazy"
    />
  </div>
</section>

<style>
  @keyframes subtle-zoom {
    0% { transform: scale(1.1); }
    50% { transform: scale(1.15); }
    100% { transform: scale(1.1); }
  }

  @keyframes slow-spin {
    from { transform: translate(-50%, -50%) rotate(0deg); }
    to { transform: translate(-50%, -50%) rotate(360deg); }
  }

  @keyframes title-fade-in {
    0% { 
      opacity: 0; 
      transform: translateY(30px) scale(0.95); 
    }
    100% { 
      opacity: 1; 
      transform: translateY(0) scale(1); 
    }
  }

  @keyframes subtitle-fade-in {
    0% { 
      opacity: 0; 
      transform: translateY(25px) scale(0.98); 
    }
    100% { 
      opacity: 1; 
      transform: translateY(0) scale(1); 
    }
  }

  @keyframes quote-fade-in {
    0% { 
      opacity: 0; 
      transform: translateY(20px) scale(0.99); 
    }
    100% { 
      opacity: 1; 
      transform: translateY(0) scale(1); 
    }
  }

  @keyframes wave {
    0% { transform: translateX(0) translateY(0); }
    50% { transform: translateX(-1%) translateY(2px); }
    100% { transform: translateX(0) translateY(0); }
  }

  .animate-subtle-zoom {
    animation: subtle-zoom 20s infinite alternate ease-in-out;
  }

  .animate-slow-spin {
    animation: slow-spin 60s infinite linear;
  }

  .motion-safe\:animate-slow-spin {
    animation: slow-spin 60s infinite linear;
  }

  .animate-title-fade-in {
    opacity: 0;
    animation: title-fade-in 1.2s ease-out forwards;
  }

  .animate-subtitle-fade-in {
    opacity: 0;
    animation: subtitle-fade-in 1.2s ease-out 0.8s forwards;
  }

  .animate-quote-fade-in {
    opacity: 0;
    animation: quote-fade-in 1.2s ease-out 1.6s forwards;
  }

  .animate-wave {
    animation: wave 8s ease-in-out infinite;
  }

  .transition-divider {
    filter: drop-shadow(0 -10px 15px rgba(0,0,0,0.1));
  }

  /* Optimisation responsive pour l'image hero accueil */
  @media (max-width: 768px) {
    .hero-section img[src="/images/herobg.webp"] {
      object-position: center 25% !important; /* Cadrage spécifique pour la sculpture */
    }
  }

  @media (min-width: 769px) {
    .hero-section img[src="/images/herobg.webp"] {
      object-position: center 20% !important; /* Cadrage desktop pour la sculpture */
    }
  }
</style>
</section>

<script>
  // Animation des cartes au chargement
  document.addEventListener('DOMContentLoaded', () => {
    const postCards = document.querySelectorAll('.post-card');
    postCards.forEach((card, index) => {
      setTimeout(() => {
        card.classList.add('opacity-100');
      }, index * 100);
    });
  });
</script>

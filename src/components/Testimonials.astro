---
import Card from './ui/Card.astro';

const testimonials = [
  {
    name: 'Sophie Martin',
    role: 'Cliente',
    content: 'Grâce à l\'accompagnement de Naima, j\'ai retrouvé mon énergie et un meilleur équilibre de vie. Son approche personnalisée et ses conseils précieux ont fait toute la différence.',
  },
  {
    name: 'Marc Dubois',
    role: 'Client',
    content: 'Grâce à Harmonia et Vita, j’ai retrouvé ma sérénité intérieure.',
  },
  {
    name: 'Julie Leroux',
    role: 'Cliente',
    content: 'Mon chien est transformé, il semble tellement apaisé.',
  }
];
---

<section class="py-12 md:py-16 bg-sage/5 relative overflow-hidden">
  <!-- Motifs de fond -->
  <div class="absolute inset-0 bg-nature-pattern opacity-5 rotate-180"></div>
  
  <div class="container mx-auto px-4">
    <!-- En-tête -->
    <div class="text-center max-w-3xl mx-auto mb-12" data-aos="fade-up" data-aos-offset="15">
      <h2 class="font-heading text-4xl md:text-5xl text-ebony mb-6">
        Témoignages
      </h2>
      <p class="font-slogan text-lg text-eucalyptus">
        Ils ont retrouvé leur harmonie.
      </p>
    </div>

    <!-- Grille de témoignages -->
    <div class="grid md:grid-cols-3 gap-8 mb-0">
      {testimonials.map((testimonial, index) => (
        <div data-aos="fade-up" data-aos-delay={index * 25} data-aos-offset="15">
          <Card variant="hover" class="h-full">
            <div class="flex flex-col h-full">
              <!-- Citation -->
              <div class="mb-6">
                <span class="material-icons text-4xl text-gold">format_quote</span>
              </div>
              
              <!-- Contenu -->
              <p class="text-eucalyptus mb-8 flex-grow italic">
                "{testimonial.content}"
              </p>
              
              <!-- Auteur -->
              <div class="flex items-center gap-4">
                <div>
                  <h3 class="font-heading text-lg text-ebony">
                    {testimonial.name}
                  </h3>
                  <p class="text-sm text-eucalyptus">
                    {testimonial.role}
                  </p>
                </div>
              </div>
            </div>
          </Card>
        </div>
      ))}
    </div>
  </div>

  <!-- Éléments décoratifs -->
  <div class="absolute bottom-0 left-0 w-48 h-48 bg-geometric-pattern opacity-10 transform -rotate-12"></div>
  <div class="absolute top-0 right-0 w-32 h-32 bg-gold opacity-5 rounded-full"></div>
</section>
---
// Interface pour les props
interface Props {
  session?: any;
}

// Récupération de la session via props OU Astro.locals (fallback)
const { session: propSession } = Astro.props;
const session = propSession || Astro.locals.session;
const isAuthenticated = !!session;

// Log pour diagnostiquer (desktop + mobile)
if (Astro.url.pathname === '/') {
  console.log('[AUTHBUTTON_HOME] AuthButton sur page d\'accueil:', {
    hasSession: !!session,
    hasPropsSession: !!propSession,
    hasLocalsSession: !!Astro.locals.session,
    isAuthenticated,
    userEmail: session?.user?.email || 'N/A',
    source: propSession ? 'props' : 'locals'
  });
}

// Classes communes pour les boutons
const commonButtonClasses = "font-slogan text-sm tracking-wide transition-colors duration-200 flex items-center gap-2 logout-button";
---

<div class="flex items-center justify-center gap-3" id="auth-button-container">
  {isAuthenticated ? (
    <>
      <a
        href="/mon-compte"
        class={`${commonButtonClasses}`}
        aria-label="Mon compte"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"
          />
        </svg>
      </a>
      <button
        type="button"
        class={`${commonButtonClasses}`} aria-label="Déconnexion" 
        onclick="
          // Suppression côté client
          localStorage.clear();
          sessionStorage.clear();
          document.cookie.split(';').forEach(function(c) {
            document.cookie = c.trim().split('=')[0] + '=;expires=Thu, 01 Jan 1970 00:00:00 UTC;path=/';
          });
          
          // Tentative d'appel à l'API (peut échouer à cause de Vercel Protection)
          fetch('/api/auth/signout', { method: 'POST' })
            .catch(() => console.log('API signout bloquée par Vercel Protection'));
          
          // Redirection immédiate
          window.location.href = '/';
        "
      >
        Déconnexion
      </button>
    </>
  ) : (
    <a
      href="/login"
      class={`${commonButtonClasses}`}
    >
      Connexion
    </a>
  )}
</div>

<script>
  // SCRIPT DÉSACTIVÉ - causait une boucle infinie
  // TODO: Trouver une meilleure solution
</script>

<style >
  .logout-button {
    font-family: "Lora", serif;
    letter-spacing: 1px;
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    z-index: 0;
    background: linear-gradient(45deg, #d4a373, #f4f1ed);
    color: #131212;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  /* Effet de survol lumineux */
  .logout-button::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      120deg,
      transparent,
      rgba(255, 255, 255, 0.4),
      transparent
    );
    transform: skewX(-25deg);
    transition: all 0.5s ease;
  }

  .logout-button:hover::before {
    left: 200%;
  }

  .logout-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
  }

  .logout-button:active {
    transform: translateY(0);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .logout-button:focus {
    outline: none;
    box-shadow: 0 0 0 3px #a8b5a3;
    }
</style>

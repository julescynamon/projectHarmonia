---
interface Props {
  variant?: 'default' | 'hover' | 'feature';
  class?: string;
}

const { 
  variant = 'default',
  class: className = ''
} = Astro.props;

const variants = {
  default: 'bg-white shadow-sm',
  hover: 'bg-white shadow-sm hover:shadow-xl hover:-translate-y-1',
  feature: 'bg-cream border border-gold/20 shadow-sm'
};

const baseClasses = 'rounded-2xl p-6 transition-all duration-300 border border-sage/10';
const classes = `${baseClasses} ${variants[variant]} ${className}`;
---

<div class={classes}>
  <slot />
</div>

<style>
  div {
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  div::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-gold) 0%, transparent 100%);
    opacity: 0;
    transition: all 0.4s ease;
    z-index: 0;
  }

  div:hover::before {
    opacity: 0.05;
    transform: scale(1.05);
  }

  :global(div > *) {
    position: relative;
    z-index: 1;
  }
</style>

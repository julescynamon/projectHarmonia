---
import MainLayout from '../layouts/MainLayout.astro';
import { pageSEO } from '../lib/seo';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';

const seo = pageSEO.about;

const qualifications = [
  {
    title: 'Formation en Naturopathie',
    institution: 'Institut de Naturopathie',
    year: '2018',
    icon: 'school'
  },
  {
    title: 'Spécialisation en Phytothérapie',
    institution: 'École des Plantes',
    year: '2019',
    icon: 'eco'
  },
  {
    title: 'Certification en Nutrition Holistique',
    institution: 'Institut de Nutrition',
    year: '2020',
    icon: 'restaurant'
  },
  {
    title: 'Formation en Massages Bien-être',
    institution: 'École de Massages',
    year: '2021',
    icon: 'spa'
  }
];

const values = [
  {
    title: 'Approche Holistique',
    description: 'Je considère chaque personne dans sa globalité, prenant en compte tous les aspects de sa vie.',
    icon: 'psychology'
  },
  {
    title: 'Écoute Active',
    description: 'Chaque consultation est un moment d\'échange privilégié où votre parole est précieuse.',
    icon: 'hearing'
  },
  {
    title: 'Méthodes Naturelles',
    description: 'Je privilégie toujours des solutions douces et naturelles pour accompagner votre santé.',
    icon: 'nature'
  },
  {
    title: 'Suivi Personnalisé',
    description: 'Votre parcours est unique, mon accompagnement s\'adapte à vos besoins spécifiques.',
    icon: 'person'
  }
];
---

<MainLayout title={seo.title} description={seo.description}>
  <div class="pt-24">
    <!-- Hero Section -->
    <section class="py-20 bg-sage/5 relative overflow-hidden">
      <!-- Motifs de fond -->
      <div class="absolute inset-0 bg-geometric-pattern opacity-5"></div>
      <div class="absolute inset-0 bg-nature-pattern opacity-5"></div>

      <div class="container mx-auto px-4">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Image -->
          <div class="relative" data-aos="fade-right">
            <div class="aspect-[4/5] rounded-2xl overflow-hidden">
              <img
                src="/images/portrait.jpg"
                alt="Naima Tyzra dans son cabinet"
                class="w-full h-full object-cover"
              />
            </div>
            <!-- Éléments décoratifs -->
            <div class="absolute -top-4 -left-4 w-32 h-32 bg-sage opacity-10 rounded-full"></div>
            <div class="absolute -bottom-4 -right-4 w-48 h-48 bg-gold opacity-10 rounded-full"></div>
          </div>

          <!-- Contenu -->
          <div data-aos="fade-left">
            <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl text-ebony mb-6">
              À Propos de Moi
            </h1>
            <div class="space-y-4 text-eucalyptus mb-8">
              <p>
                Passionnée par la naturopathie et le bien-être holistique depuis plus de 10 ans, j'accompagne mes clients vers un meilleur équilibre de vie grâce à des méthodes naturelles et personnalisées.
              </p>
              <p>
                Mon approche combine des techniques traditionnelles éprouvées et des méthodes modernes, toujours adaptées aux besoins spécifiques de chaque personne.
              </p>
            </div>
            <Button href="/rendez-vous" size="lg">
              Prendre rendez-vous
            </Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Qualifications Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <h2 class="font-heading text-3xl md:text-4xl text-ebony mb-12 text-center">
          Parcours & Qualifications
        </h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {qualifications.map((qualification, index) => (
            <div data-aos="fade-up" data-aos-delay={index * 100}>
              <Card variant="hover" class="h-full">
                <div class="p-6">
                  <div class="w-12 h-12 rounded-full bg-sage/10 flex items-center justify-center mb-4">
                    <span class="material-icons text-2xl text-eucalyptus">
                      {qualification.icon}
                    </span>
                  </div>
                  <h3 class="font-heading text-xl text-ebony mb-2">
                    {qualification.title}
                  </h3>
                  <p class="text-eucalyptus mb-2">{qualification.institution}</p>
                  <p class="text-sm text-gold">{qualification.year}</p>
                </div>
              </Card>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="py-20 bg-sage/5 relative overflow-hidden">
      <!-- Motifs de fond -->
      <div class="absolute inset-0 bg-geometric-pattern opacity-5 rotate-180"></div>

      <div class="container mx-auto px-4">
        <h2 class="font-heading text-3xl md:text-4xl text-ebony mb-12 text-center">
          Mes Valeurs
        </h2>

        <div class="grid md:grid-cols-2 gap-8">
          {values.map((value, index) => (
            <div data-aos="fade-up" data-aos-delay={index * 100}>
              <Card variant="feature" class="h-full">
                <div class="p-6">
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 rounded-full bg-sage/10 flex items-center justify-center shrink-0">
                      <span class="material-icons text-2xl text-eucalyptus">
                        {value.icon}
                      </span>
                    </div>
                    <div>
                      <h3 class="font-heading text-xl text-ebony mb-2">
                        {value.title}
                      </h3>
                      <p class="text-eucalyptus">{value.description}</p>
                    </div>
                  </div>
                </div>
              </Card>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="font-heading text-3xl md:text-4xl text-ebony mb-6">
            Commencez Votre Parcours Bien-être
          </h2>
          <p class="text-eucalyptus mb-8">
            Je serai ravie de vous accompagner dans votre démarche vers un meilleur équilibre de vie.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button href="/rendez-vous" size="lg">
              Prendre rendez-vous
            </Button>
            <Button href="/contact" variant="outline" size="lg">
              Me contacter
            </Button>
          </div>
        </div>
      </div>
    </section>
  </div>
</MainLayout>
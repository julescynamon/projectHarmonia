---
// src/pages/accompagnements/accompagnement-personalise.astro
import MainLayout from '../../layouts/MainLayout.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';

const seo = {
  title: "Accompagnement personnel – Coaching et guidance de vie pour retrouver clarté et confiance | La Maison Sattvaïa",
  description: "Accompagnement personnel en coaching de vie et guidance intuitive. Retrouvez clarté, confiance en vous et sérénité. Séances à distance par téléphone ou visioconférence. Réservez votre séance.",
  keywords: "accompagnement personnel, coaching de vie, guidance intuitive, confiance en soi, clarté intérieure, développement personnel, séance à distance, La Maison Sattvaïa"
};

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Accompagnement personnel - Coaching et guidance de vie",
  "description": "Accompagnement personnel bienveillant pour retrouver clarté et confiance en soi",
  "provider": {
    "@type": "Person",
    "name": "La Maison Sattvaïa"
  },
  "areaServed": "France",
  "serviceType": "Coaching personnel et guidance intuitive",
  "offers": {
    "@type": "Offer",
    "price": "60",
    "priceCurrency": "EUR",
    "description": "Séance d'accompagnement personnel d'1h"
  }
};
---

<MainLayout title={seo.title} description={seo.description}>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>



  <div>
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden pb-16 hero-section">
      <!-- Background avec image et overlay -->
      <div class="absolute inset-0">
        <img 
          src="/images/accompagnement-personnel-hero.webp" 
          alt=""
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-ebony/70 via-ebony/50 to-ebony/30"></div>
      </div>
      
      <!-- Contenu principal centré -->
      <div class="container mx-auto px-4 relative z-10 flex flex-col justify-center min-h-screen">
        <div class="max-w-4xl mx-auto text-center">
          <!-- En-tête centré -->
          <div class="motion-safe:animate-fade-in">
            
            
            <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl mb-8 leading-tight text-white drop-shadow-[0_2px_8px_rgba(0,0,0,0.3)]" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="600">
              Accompagnement personnel
              <span class="block text-sage mt-10 typewriter-text text-2xl md:text-3xl lg:text-4xl" id="hero-typewriter">Retrouver clarté et confiance</span>
            </h1>
            
            <p class="font-body text-xl mb-10 text-white/90 leading-relaxed max-w-3xl mx-auto drop-shadow-[0_2px_4px_rgba(0,0,0,0.2)] italic" data-aos="fade-up" data-aos-duration="800" data-aos-delay="800">
              "L'accompagnement personnel de La Maison Sattvaïa est un espace bienveillant, entre coaching de vie et guidance intuitive"
            </p>
          </div>
          
          <!-- Informations pratiques en petites bulles -->
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-12" data-aos="fade-up" data-aos-duration="800" data-aos-delay="1000">
            <!-- Bulle 1: Durée -->
            <div class="group relative overflow-hidden rounded-xl backdrop-blur-sm transition-all duration-500 hover:transform hover:scale-105 w-32 h-32">
              <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-white/5 border border-white/20 rounded-xl"></div>
              <div class="relative p-6 text-center flex flex-col justify-center items-center h-full">
                <div class="bg-white/20 rounded-full w-8 h-8 flex items-center justify-center mb-4">
                  <span class="material-icons text-white text-lg">schedule</span>
                </div>
                <p class="font-heading text-lg text-white mb-3 drop-shadow-[0_2px_4px_rgba(0,0,0,0.4)] leading-tight">
                  1h
                </p>
                <p class="text-white/90 text-xs uppercase tracking-wider font-medium leading-tight">
                  Durée séance
                </p>
              </div>
            </div>
            
            <!-- Bulle 2: Format -->
            <div class="group relative overflow-hidden rounded-xl backdrop-blur-sm transition-all duration-500 hover:transform hover:scale-105 w-44 h-32">
              <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-white/5 border border-white/20 rounded-xl"></div>
              <div class="relative p-6 text-center flex flex-col justify-center items-center h-full">
                <div class="bg-white/20 rounded-full w-8 h-8 flex items-center justify-center mb-4">
                  <span class="material-icons text-white text-lg">video_call</span>
                </div>
                <p class="font-heading text-lg text-white mb-3 drop-shadow-[0_2px_4px_rgba(0,0,0,0.4)] leading-tight">
                  À distance
                </p>
                <p class="text-white/90 text-xs uppercase tracking-wider font-medium leading-tight px-1">
                  Téléphone ou visioconférence
                </p>
              </div>
            </div>
            
            <!-- Bulle 3: Tarif -->
            <div class="group relative overflow-hidden rounded-xl backdrop-blur-sm transition-all duration-500 hover:transform hover:scale-105 w-32 h-32">
              <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-white/5 border border-white/20 rounded-xl"></div>
              <div class="relative p-6 text-center flex flex-col justify-center items-center h-full">
                <div class="bg-white/20 rounded-full w-8 h-8 flex items-center justify-center mb-4">
                  <span class="material-icons text-white text-lg">euro</span>
                </div>
                <p class="font-heading text-lg text-white mb-3 drop-shadow-[0_2px_4px_rgba(0,0,0,0.4)] leading-tight">
                  60€
                </p>
                <p class="text-white/90 text-xs uppercase tracking-wider font-medium leading-tight">
                  la séance
                </p>
              </div>
            </div>
          </div>
          
          <!-- Boutons CTA -->
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-16" data-aos="fade-up" data-aos-duration="800" data-aos-delay="1200">
            <Button href="/accompagnements/reservation" size="lg" variant="secondary">
              Je réserve ma séance
            </Button>
            <Button href="#details" size="lg" variant="outline" class="border-white text-white hover:bg-sage hover:text-ebony">
              En savoir plus
            </Button>
          </div>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 animate-bounce">
        <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center">
          <div class="w-1 h-3 bg-white/70 rounded-full mt-2 animate-pulse"></div>
        </div>
      </div>
    </section>

    <!-- Introduction - Design moderne avec image de fond -->
    <section class="py-24 bg-gradient-to-br from-sage/10 via-cream to-white relative overflow-hidden">
      <!-- Éléments décoratifs en arrière-plan -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-20 left-10 w-2 h-2 bg-sage rounded-full animate-pulse"></div>
        <div class="absolute top-40 right-20 w-1 h-1 bg-gold rounded-full animate-bounce"></div>
        <div class="absolute bottom-20 left-1/4 w-3 h-3 bg-eucalyptus rounded-full animate-ping"></div>
        <div class="absolute bottom-40 right-1/3 w-1 h-1 bg-sage rounded-full animate-pulse"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-6xl mx-auto">
          <!-- Titre principal avec effet de gradient -->
          <div class="text-center mb-12" data-aos="fade-up">
            <h2 class="font-heading text-4xl md:text-5xl lg:text-6xl text-ebony mb-6">
              <span class="bg-gradient-to-r from-sage via-eucalyptus to-gold bg-clip-text text-transparent">
                Une approche douce et globale
              </span>
              <br />
              <span class="text-ebony">de l'accompagnement personnel</span>
            </h2>
            <div class="w-24 h-1 bg-gradient-to-r from-sage to-gold mx-auto rounded-full"></div>
          </div>



          <!-- Section avec image de fond et contenu -->
          <div class="relative rounded-3xl overflow-hidden shadow-2xl min-h-[600px] sm:min-h-[650px] lg:min-h-[700px]" data-aos="fade-up" data-aos-delay="600">
            <!-- Image de fond -->
            <div class="absolute inset-0">
              <picture class="w-full h-full">
                <!-- Version mobile (max-width: 768px) -->
                <source 
                  media="(max-width: 768px)" 
                  srcset="/images/accompagnement-personnel-banniere-mobile.webp" 
                  type="image/webp"
                />
                
                <!-- Version desktop (min-width: 769px) -->
                <source 
                  media="(min-width: 769px)" 
                  srcset="/images/accompagnement-personnel-banniere.webp" 
                  type="image/webp"
                />
                
                <!-- Fallback image -->
                <img 
                  src="/images/accompagnement-personnel-banniere.webp" 
                  alt="Coaching et guidance de vie – retrouver clarté et confiance"
                  class="w-full h-full object-cover"
                />
              </picture>
              <!-- Overlay gradient pour la lisibilité -->
              <div class="absolute inset-0 bg-gradient-to-r from-ebony/70 via-ebony/50 to-ebony/30"></div>
            </div>
            
            <!-- Contenu par-dessus -->
            <div class="relative z-10 p-6 sm:p-8 md:p-10 lg:p-14 xl:p-18 flex items-center min-h-full">
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8 lg:gap-12 items-center w-full">
                <!-- Citation -->
                <div class="text-white order-1 lg:order-1" data-aos="fade-right">
                  <div class="text-center lg:text-left mb-4 sm:mb-6 lg:mb-0 px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
                    <blockquote class="text-white font-['Dancing Script'] text-2xl sm:text-3xl lg:text-4xl leading-relaxed" style="font-family: 'Dancing Script', cursive;">
                      "Prendre soin de soi, ce n'est pas un luxe, c'est une responsabilité sacrée envers la vie qui nous habite."
                    </blockquote>
                  </div>
                </div>
                
                <!-- Description -->
                <div class="bg-white/15 sm:bg-white/18 lg:bg-white/20 backdrop-blur-md rounded-2xl p-6 sm:p-8 border border-white/25 shadow-lg order-2 lg:order-2" data-aos="fade-left">
                  <div class="space-y-4 sm:space-y-6">
                    <div class="flex items-start space-x-3 sm:space-x-4">
                      <div class="bg-sage/50 sm:bg-sage/40 p-2 sm:p-3 rounded-full flex-shrink-0">
                        <span class="material-icons text-sage text-xl sm:text-2xl">healing</span>
                      </div>
                      <div>
                        <h4 class="font-heading text-lg sm:text-xl text-white mb-2 sm:mb-3">Une guidance en profondeur</h4>
                        <p class="font-body text-sm sm:text-base text-white/95 leading-relaxed">
                          Mise en lumière des blocages invisibles pour retrouver clarté et équilibre intérieur.
                        </p>
                      </div>
                    </div>
                    
                    <div class="flex items-start space-x-3 sm:space-x-4">
                      <div class="bg-gold/50 sm:bg-gold/40 p-2 sm:p-3 rounded-full flex-shrink-0">
                        <span class="material-icons text-gold text-xl sm:text-2xl">psychology</span>
                      </div>
                      <div>
                        <h4 class="font-heading text-lg sm:text-xl text-white mb-2 sm:mb-3">Un soutien dans les transitions</h4>
                        <p class="font-body text-sm sm:text-base text-white/95 leading-relaxed">
                          Transitions de vie, doutes, bouleversements : chaque séance devient un repère stable et rassurant.
                        </p>
                      </div>
                    </div>
                    
                    <div class="flex items-start space-x-3 sm:space-x-4">
                      <div class="bg-eucalyptus/50 sm:bg-eucalyptus/40 p-2 sm:p-3 rounded-full flex-shrink-0">
                        <span class="material-icons text-eucalyptus text-xl sm:text-2xl">trending_up</span>
                      </div>
                      <div>
                        <h4 class="font-heading text-lg sm:text-xl text-white mb-2 sm:mb-3">Vers plus de confiance</h4>
                        <p class="font-body text-sm sm:text-base text-white/95 leading-relaxed">
                          Retrouver force et sérénité pour avancer plus librement, en accord avec soi-même.
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Cette séance est faite pour vous si... - Design moderne -->
    <section class="py-16 bg-gradient-to-br from-white via-cream to-sage/5 relative overflow-hidden">
      <!-- Éléments décoratifs en arrière-plan -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-10 left-10 w-32 h-32 bg-sage rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-10 right-10 w-24 h-24 bg-gold rounded-full blur-2xl animate-bounce"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-6xl mx-auto">
          <!-- Titre principal -->
          <div class="text-center mb-12" data-aos="fade-up">
            <h2 class="font-heading text-4xl md:text-5xl lg:text-6xl text-ebony mb-6">
              <span class="bg-gradient-to-r from-sage via-eucalyptus to-gold bg-clip-text text-transparent">
            Cette séance est faite pour vous si...
              </span>
          </h2>
            <div class="w-32 h-1 bg-gradient-to-r from-sage to-gold mx-auto rounded-full mb-8"></div>
            <p class="font-body text-xl text-ebony/80 max-w-3xl mx-auto leading-relaxed">
              Découvrez si l'accompagnement personnel correspond à vos besoins actuels.
            </p>
          </div>

          <!-- Grille de cartes responsive -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
            <!-- Carte 1: Vous vous sentez perdu(e) -->
            <div class="group" data-aos="fade-up" data-aos-delay="200">
              <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-6 lg:p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10 h-full">
                <div class="flex items-center space-x-4 mb-4">
                  <div class="bg-gradient-to-br from-sage/20 to-eucalyptus/20 p-3 rounded-full">
                    <span class="material-icons text-sage text-2xl">help</span>
                </div>
                  <div class="bg-sage text-white px-3 py-1 rounded-full text-sm font-slogan uppercase tracking-wider">
                    Confusion
                  </div>
                </div>
                <h3 class="font-heading text-xl lg:text-2xl text-ebony mb-4">Vous vous sentez perdu(e) dans vos choix ou vos projets</h3>
                <p class="font-body text-ebony leading-relaxed text-sm lg:text-base">
                  Vous ne savez plus quelle direction prendre et avez besoin de clarifier vos priorités et objectifs de vie.
                </p>
              </div>
            </div>
            
            <!-- Carte 2: Période de transition -->
            <div class="group" data-aos="fade-up" data-aos-delay="300">
              <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-6 lg:p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10 h-full">
                <div class="flex items-center space-x-4 mb-4">
                  <div class="bg-gradient-to-br from-eucalyptus/20 to-sage/20 p-3 rounded-full">
                    <span class="material-icons text-eucalyptus text-2xl">change_circle</span>
                </div>
                  <div class="bg-eucalyptus text-white px-3 py-1 rounded-full text-sm font-slogan uppercase tracking-wider">
                    Transition
                  </div>
                </div>
                <h3 class="font-heading text-xl lg:text-2xl text-ebony mb-4">Vous vivez une période de transition personnelle ou professionnelle</h3>
                <p class="font-body text-ebony leading-relaxed text-sm lg:text-base">
                  Changement de vie, reconversion, séparation... Vous traversez une phase de changement important.
                </p>
              </div>
            </div>
            
            <!-- Carte 3: Retrouver confiance -->
            <div class="group" data-aos="fade-up" data-aos-delay="400">
              <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-6 lg:p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10 h-full">
                <div class="flex items-center space-x-4 mb-4">
                  <div class="bg-gradient-to-br from-gold/20 to-sage/20 p-3 rounded-full">
                    <span class="material-icons text-gold text-2xl">favorite</span>
                </div>
                  <div class="bg-gold text-white px-3 py-1 rounded-full text-sm font-slogan uppercase tracking-wider">
                    Confiance
                  </div>
                </div>
                <h3 class="font-heading text-xl lg:text-2xl text-ebony mb-4">Vous avez besoin de retrouver confiance en vous et en vos capacités</h3>
                <p class="font-body text-ebony leading-relaxed text-sm lg:text-base">
                  Estime de soi fragile, doutes persistants... Vous souhaitez renforcer votre confiance intérieure.
                </p>
              </div>
            </div>
            
            <!-- Carte 4: Gestion des émotions -->
            <div class="group" data-aos="fade-up" data-aos-delay="500">
              <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-6 lg:p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10 h-full">
                <div class="flex items-center space-x-4 mb-4">
                  <div class="bg-gradient-to-br from-sage/20 to-eucalyptus/20 p-3 rounded-full">
                    <span class="material-icons text-sage text-2xl">psychology</span>
                </div>
                  <div class="bg-sage text-white px-3 py-1 rounded-full text-sm font-slogan uppercase tracking-wider">
                    Émotions
                  </div>
                </div>
                <h3 class="font-heading text-xl lg:text-2xl text-ebony mb-4">Vous cherchez un soutien pour mieux gérer vos émotions et vos relations</h3>
                <p class="font-body text-ebony leading-relaxed text-sm lg:text-base">
                  Stress, anxiété, relations difficiles... Vous aimeriez développer de meilleurs outils émotionnels.
                </p>
              </div>
            </div>
            
            <!-- Carte 5: Clarté et sérénité -->
            <div class="group" data-aos="fade-up" data-aos-delay="600">
              <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-6 lg:p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10 h-full">
                <div class="flex items-center space-x-4 mb-4">
                  <div class="bg-gradient-to-br from-eucalyptus/20 to-sage/20 p-3 rounded-full">
                    <span class="material-icons text-eucalyptus text-2xl">auto_awesome</span>
                </div>
                  <div class="bg-eucalyptus text-white px-3 py-1 rounded-full text-sm font-slogan uppercase tracking-wider">
                    Sérénité
              </div>
                </div>
                <h3 class="font-heading text-xl lg:text-2xl text-ebony mb-4">Vous souhaitez avancer avec plus de clarté et de sérénité dans votre vie</h3>
                <p class="font-body text-ebony leading-relaxed text-sm lg:text-base">
                  Retrouver un alignement avec vos valeurs et vivre de façon plus épanouie et sereine au quotidien.
                </p>
            </div>
          </div>
          </div>
          
      </div>
      
      <!-- CTA après "Cette séance est faite pour vous si..." -->
      <div class="container mx-auto px-4 relative z-10 mt-12">
        <div class="max-w-4xl mx-auto text-center">
          <div class="bg-gradient-to-br from-sage/10 to-eucalyptus/10 rounded-2xl p-8 border border-sage/20" data-aos="fade-up" data-aos-delay="1000">
            <h3 class="font-heading text-2xl text-ebony mb-4">Vous vous reconnaissez dans ces situations ?</h3>
            <p class="font-body text-ebony/80 mb-6">C’est le moment de vous choisir, et de marcher vers plus d’harmonie.</p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <Button href="/accompagnements/reservation" size="lg" variant="secondary" class="bg-sage text-white hover:bg-eucalyptus">
                <span class="material-icons mr-2">calendar_today</span>
                Réserver ma séance
              </Button>
              <Button href="/contact" size="lg" variant="outline" class="border-sage text-sage hover:bg-sage hover:text-white">
                <span class="material-icons mr-2">phone</span>
                Discuter de mes besoins
              </Button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Les bénéfices - Design moderne avec grille de cartes -->
    <section class="py-28 relative overflow-hidden">
            <!-- Image de fond -->
      <div class="absolute inset-0">
              <img 
                src="/images/accompagnement-personnel-benefices.webp" 
          alt="Bienfaits d'un accompagnement personnel – La Maison Sattvaïa"
          class="w-full h-full object-cover"
        />
        <!-- Overlay gradient pour la lisibilité -->
        <div class="absolute inset-0 bg-gradient-to-br from-white/40 via-white/30 to-sage/5"></div>
      </div>
      
      <!-- Éléments décoratifs en arrière-plan -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-20 right-10 w-2 h-2 bg-sage rounded-full animate-pulse"></div>
        <div class="absolute bottom-40 left-20 w-1 h-1 bg-gold rounded-full animate-bounce"></div>
        <div class="absolute top-1/2 right-1/4 w-3 h-3 bg-eucalyptus rounded-full animate-ping"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-6xl mx-auto">
          <!-- Titre principal -->
          <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="font-heading text-4xl md:text-5xl lg:text-6xl text-ebony mb-6">
              <span class="bg-gradient-to-r from-sage via-eucalyptus to-gold bg-clip-text text-transparent">
                Les bénéfices
              </span>
              <br />
              <span class="text-ebony">d'un accompagnement personnel</span>
            </h2>
            <div class="w-24 h-1 bg-gradient-to-r from-sage to-gold mx-auto rounded-full mb-8"></div>
            <p class="font-body text-xl text-ebony/80 max-w-3xl mx-auto leading-relaxed">
              Découvrez les transformations que vous pouvez vivre grâce à cet accompagnement.
                  </p>
                </div>
                
          <!-- Grille de bénéfices -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
            <!-- Bénéfice 1 -->
            <div class="group" data-aos="fade-up" data-aos-delay="200">
              <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-8 shadow-soft hover:shadow-xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10 h-full">
                <div class="bg-gradient-to-br from-sage/20 to-eucalyptus/20 rounded-full w-16 h-16 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                  <span class="material-icons text-sage text-3xl">hearing</span>
                </div>
                <h3 class="font-heading text-2xl text-ebony mb-4">Une écoute profonde et bienveillante</h3>
                <p class="font-body text-ebony leading-relaxed">
                  Un espace d'écoute authentique où vous pouvez vous exprimer librement sans jugement.
                </p>
              </div>

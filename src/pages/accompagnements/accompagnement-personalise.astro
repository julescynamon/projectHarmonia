---
// src/pages/accompagnements/accompagnement-personalise.astro
import MainLayout from '../../layouts/MainLayout.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';

const seo = {
  title: "Accompagnement personnel – Coaching et guidance de vie pour retrouver clarté et confiance | Harmonia et Vita",
  description: "Accompagnement personnel en coaching de vie et guidance intuitive. Retrouvez clarté, confiance en vous et sérénité. Séances à distance par téléphone ou visioconférence. Réservez votre séance.",
  keywords: "accompagnement personnel, coaching de vie, guidance intuitive, confiance en soi, clarté intérieure, développement personnel, séance à distance, Harmonia et Vita"
};

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Accompagnement personnel - Coaching et guidance de vie",
  "description": "Accompagnement personnel bienveillant pour retrouver clarté et confiance en soi",
  "provider": {
    "@type": "Person",
    "name": "Harmonia et Vita"
  },
  "areaServed": "France",
  "serviceType": "Coaching personnel et guidance intuitive",
  "offers": {
    "@type": "Offer",
    "price": "60",
    "priceCurrency": "EUR",
    "description": "Séance d'accompagnement personnel d'1h"
  }
};
---

<MainLayout title={seo.title} description={seo.description}>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>

  <div class="pt-24">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden pb-16">
      <!-- Background avec image et overlay -->
      <div class="absolute inset-0">
        <img 
          src="/images/accompagnement-personnel-hero.jpg" 
          alt=""
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-ebony/70 via-ebony/50 to-ebony/30"></div>
      </div>
      
      <!-- Contenu principal centré -->
      <div class="container mx-auto px-4 relative z-10 flex flex-col justify-center min-h-screen">
        <div class="max-w-4xl mx-auto text-center">
          <!-- En-tête centré -->
          <div class="motion-safe:animate-fade-in">
            <div class="mb-6" data-aos="fade-up" data-aos-duration="800" data-aos-delay="400">
              <span class="inline-block bg-sage/20 backdrop-blur-sm text-sage px-4 py-2 rounded-full text-sm font-slogan uppercase tracking-wider mb-4">
                Coaching de vie & guidance intuitive
              </span>
            </div>
            
            <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl mb-6 leading-tight text-white drop-shadow-[0_2px_8px_rgba(0,0,0,0.3)]" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="600">
              Accompagnement personnel
              <span class="block text-sage">Retrouver clarté et confiance</span>
            </h1>
            
            <p class="font-body text-xl mb-8 text-white/90 leading-relaxed max-w-3xl mx-auto drop-shadow-[0_2px_4px_rgba(0,0,0,0.2)]" data-aos="fade-up" data-aos-duration="800" data-aos-delay="800">
              Un espace bienveillant entre coaching de vie et guidance intuitive pour vous aider à libérer vos blocages et retrouver une vision claire de votre chemin.
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16" data-aos="fade-up" data-aos-duration="800" data-aos-delay="1000">
              <Button href="/accompagnements/reservation" size="lg" variant="secondary">
                Je réserve ma séance
              </Button>
              <Button href="#details" size="lg" variant="outline" class="border-white text-white hover:bg-white hover:text-ebony">
                En savoir plus
              </Button>
            </div>
          </div>
          
          <!-- Informations pratiques en petites bulles -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center" data-aos="fade-up" data-aos-duration="800" data-aos-delay="1200">
            <!-- Bulle 1: Durée -->
            <div class="group relative overflow-hidden rounded-xl backdrop-blur-sm transition-all duration-500 hover:transform hover:scale-105 w-32 h-32">
              <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-white/5 border border-white/20 rounded-xl"></div>
              <div class="relative p-6 text-center flex flex-col justify-center items-center h-full">
                <div class="bg-white/20 rounded-full w-8 h-8 flex items-center justify-center mb-3">
                  <span class="material-icons text-white text-lg">schedule</span>
                </div>
                <p class="font-heading text-lg text-white mb-2 drop-shadow-[0_2px_4px_rgba(0,0,0,0.4)] leading-tight">
                  1h
                </p>
                <p class="text-white/90 text-xs uppercase tracking-wider font-medium leading-tight">
                  Durée séance
                </p>
              </div>
            </div>
            
            <!-- Bulle 2: Format -->
            <div class="group relative overflow-hidden rounded-xl backdrop-blur-sm transition-all duration-500 hover:transform hover:scale-105 w-44 h-32">
              <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-white/5 border border-white/20 rounded-xl"></div>
              <div class="relative p-6 text-center flex flex-col justify-center items-center h-full">
                <div class="bg-white/20 rounded-full w-8 h-8 flex items-center justify-center mb-3">
                  <span class="material-icons text-white text-lg">phone</span>
                </div>
                <p class="font-heading text-lg text-white mb-2 drop-shadow-[0_2px_4px_rgba(0,0,0,0.4)] leading-tight">
                  Téléphone
                </p>
                <p class="text-white/90 text-xs uppercase tracking-wider font-medium leading-tight px-1">
                  ou visioconférence
                </p>
              </div>
            </div>
            
            <!-- Bulle 3: Tarif -->
            <div class="group relative overflow-hidden rounded-xl backdrop-blur-sm transition-all duration-500 hover:transform hover:scale-105 w-32 h-32">
              <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-white/5 border border-white/20 rounded-xl"></div>
              <div class="relative p-6 text-center flex flex-col justify-center items-center h-full">
                <div class="bg-white/20 rounded-full w-8 h-8 flex items-center justify-center mb-3">
                  <span class="material-icons text-white text-lg">euro</span>
                </div>
                <p class="font-heading text-lg text-white mb-2 drop-shadow-[0_2px_4px_rgba(0,0,0,0.4)] leading-tight">
                  60€
                </p>
                <p class="text-white/90 text-xs uppercase tracking-wider font-medium leading-tight">
                  la séance
                </p>
              </div>
            </div>
          </div>
          
          <!-- Bouton de réservation centré -->
          <div class="text-center mt-6" data-aos="fade-up" data-aos-duration="800" data-aos-delay="1400">
            <Button href="/accompagnements/reservation" size="md" class="bg-white/20 backdrop-blur-sm border border-white/30 text-white hover:bg-white/30 transition-all duration-300">
              Réserver maintenant
            </Button>
          </div>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center">
          <div class="w-1 h-3 bg-white/70 rounded-full mt-2 animate-pulse"></div>
        </div>
      </div>
    </section>

    <!-- Introduction - Design moderne avec image de fond -->
    <section class="py-20 bg-gradient-to-br from-cream via-white to-sage/5 relative overflow-hidden">
      <!-- Éléments décoratifs en arrière-plan -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-20 left-10 w-2 h-2 bg-sage rounded-full animate-pulse"></div>
        <div class="absolute top-40 right-20 w-1 h-1 bg-gold rounded-full animate-bounce"></div>
        <div class="absolute bottom-20 left-1/4 w-3 h-3 bg-eucalyptus rounded-full animate-ping"></div>
        <div class="absolute bottom-40 right-1/3 w-1 h-1 bg-sage rounded-full animate-pulse"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-6xl mx-auto">
          <!-- Titre principal avec effet de gradient -->
          <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="font-heading text-4xl md:text-5xl lg:text-6xl text-ebony mb-6">
              <span class="bg-gradient-to-r from-sage via-eucalyptus to-gold bg-clip-text text-transparent">
                Un espace bienveillant
              </span>
              <br />
              <span class="text-ebony">pour votre épanouissement</span>
            </h2>
            <div class="w-24 h-1 bg-gradient-to-r from-sage to-gold mx-auto rounded-full"></div>
          </div>

          <!-- Grille 3 colonnes avec cartes interactives -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
            <!-- Carte 1: Coaching -->
            <div class="group relative" data-aos="fade-up" data-aos-delay="200">
              <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-soft hover:shadow-xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10">
                <div class="bg-gradient-to-br from-sage/20 to-eucalyptus/20 rounded-full w-16 h-16 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                  <span class="material-icons text-sage text-3xl">psychology</span>
                </div>
                <h3 class="font-heading text-2xl text-ebony mb-4">Coaching de vie</h3>
                <p class="font-body text-ebony leading-relaxed mb-4">
                  Un accompagnement structuré pour clarifier vos objectifs et dépasser vos blocages avec des outils concrets.
                </p>
                <div class="flex items-center text-sage font-slogan text-sm">
                  <span class="material-icons text-sm mr-1">arrow_forward</span>
                  Découvrir l'approche
                </div>
              </div>
            </div>

            <!-- Carte 2: Guidance -->
            <div class="group relative" data-aos="fade-up" data-aos-delay="400">
              <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-soft hover:shadow-xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10">
                <div class="bg-gradient-to-br from-gold/20 to-sage/20 rounded-full w-16 h-16 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                  <span class="material-icons text-gold text-3xl">lightbulb</span>
                </div>
                <h3 class="font-heading text-2xl text-ebony mb-4">Guidance intuitive</h3>
                <p class="font-body text-ebony leading-relaxed mb-4">
                  Une écoute profonde et bienveillante pour vous aider à retrouver votre chemin intérieur et votre confiance.
                </p>
                <div class="flex items-center text-gold font-slogan text-sm">
                  <span class="material-icons text-sm mr-1">arrow_forward</span>
                  Comprendre le processus
                </div>
              </div>
            </div>

            <!-- Carte 3: Transformation -->
            <div class="group relative" data-aos="fade-up" data-aos-delay="600">
              <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-soft hover:shadow-xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10">
                <div class="bg-gradient-to-br from-eucalyptus/20 to-sage/20 rounded-full w-16 h-16 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                  <span class="material-icons text-eucalyptus text-3xl">auto_awesome</span>
                </div>
                <h3 class="font-heading text-2xl text-ebony mb-4">Transformation personnelle</h3>
                <p class="font-body text-ebony leading-relaxed mb-4">
                  Un accompagnement sur-mesure pour vous aider à avancer avec plus de clarté et de sérénité dans votre vie.
                </p>
                <div class="flex items-center text-eucalyptus font-slogan text-sm">
                  <span class="material-icons text-sm mr-1">arrow_forward</span>
                  Renforcer la connexion
                </div>
              </div>
            </div>
          </div>

          <!-- Section avec image de fond et contenu -->
          <div class="relative rounded-3xl overflow-hidden shadow-2xl" data-aos="fade-up" data-aos-delay="800">
            <!-- Image de fond -->
            <div class="absolute inset-0">
              <img 
                src="/images/accompagnement-personnel-banniere.jpg" 
                alt=""
                class="w-full h-full object-cover"
              />
              <!-- Overlay gradient pour la lisibilité -->
              <div class="absolute inset-0 bg-gradient-to-r from-ebony/70 via-ebony/50 to-ebony/30"></div>
            </div>
            
            <!-- Contenu par-dessus -->
            <div class="relative z-10 p-8 md:p-12 lg:p-16">
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <!-- Citation -->
                <div class="text-white" data-aos="fade-right">
                  <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-8 mb-8 inline-block">
                    <blockquote class="text-white font-['Dancing Script'] text-2xl text-center leading-relaxed" style="font-family: 'Dancing Script', cursive;">
                      "La clarté vient de l'écoute de son cœur et de la confiance en son intuition."
                    </blockquote>
                  </div>
                </div>
                
                <!-- Description -->
                <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-8" data-aos="fade-left">
                  <h3 class="font-heading text-2xl text-ebony mb-6">Notre approche</h3>
                  <div class="space-y-6">
                    <div class="flex items-start space-x-4">
                      <div class="bg-sage/20 p-3 rounded-full">
                        <span class="material-icons text-sage text-2xl">healing</span>
                      </div>
                      <div>
                        <h4 class="font-heading text-xl text-ebony mb-2">Écoute bienveillante</h4>
                        <p class="font-body text-ebony/80 leading-relaxed">
                          Un espace de confiance où vous pouvez exprimer vos ressentis et vos besoins sans jugement.
                        </p>
                      </div>
                    </div>
                    
                    <div class="flex items-start space-x-4">
                      <div class="bg-gold/20 p-3 rounded-full">
                        <span class="material-icons text-gold text-2xl">psychology</span>
                      </div>
                      <div>
                        <h4 class="font-heading text-xl text-ebony mb-2">Outils concrets</h4>
                        <p class="font-body text-ebony/80 leading-relaxed">
                          Des exercices pratiques et des conseils personnalisés pour dépasser vos blocages.
                        </p>
                      </div>
                    </div>
                    
                    <div class="flex items-start space-x-4">
                      <div class="bg-eucalyptus/20 p-3 rounded-full">
                        <span class="material-icons text-eucalyptus text-2xl">trending_up</span>
                      </div>
                      <div>
                        <h4 class="font-heading text-xl text-ebony mb-2">Progression continue</h4>
                        <p class="font-body text-ebony/80 leading-relaxed">
                          Un accompagnement qui vous guide vers plus de confiance et de sérénité au quotidien.
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Cette séance est faite pour vous si... - Design moderne -->
    <section class="py-20 bg-gradient-to-br from-white via-cream to-sage/5 relative overflow-hidden">
      <!-- Éléments décoratifs en arrière-plan -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-10 left-10 w-32 h-32 bg-sage rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-10 right-10 w-24 h-24 bg-gold rounded-full blur-2xl animate-bounce"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-6xl mx-auto">
          <!-- Titre principal -->
          <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="font-heading text-4xl md:text-5xl lg:text-6xl text-ebony mb-6">
              <span class="bg-gradient-to-r from-sage via-eucalyptus to-gold bg-clip-text text-transparent">
                Cette séance est faite pour vous si...
              </span>
            </h2>
            <div class="w-32 h-1 bg-gradient-to-r from-sage to-gold mx-auto rounded-full mb-8"></div>
            <p class="font-body text-xl text-ebony/80 max-w-3xl mx-auto leading-relaxed">
              Découvrez si l'accompagnement personnel correspond à vos besoins actuels.
            </p>
          </div>

          <!-- Timeline verticale avec cartes modernes -->
          <div class="relative">
            <!-- Ligne de connexion -->
            <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gradient-to-b from-sage to-gold opacity-30 hidden lg:block"></div>
            
            <div class="space-y-8">
              <!-- Étape 1 -->
              <div class="flex flex-col lg:flex-row items-center gap-8" data-aos="fade-up" data-aos-delay="200">
                <div class="lg:w-1/2 lg:pr-8">
                  <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-1 border border-sage/10">
                    <div class="flex items-center space-x-4 mb-4">
                      <div class="bg-gradient-to-br from-red-100 to-red-200 p-3 rounded-full">
                        <span class="material-icons text-red-500 text-2xl">help</span>
                      </div>
                      <div class="bg-red-500 text-white px-3 py-1 rounded-full text-sm font-slogan uppercase tracking-wider">
                        Confusion
                      </div>
                    </div>
                    <h3 class="font-heading text-2xl text-ebony mb-4">Vous vous sentez perdu(e)</h3>
                    <p class="font-body text-ebony leading-relaxed mb-4">
                      Dans vos choix, vos projets ou la direction à prendre dans votre vie. Vous avez besoin de clarifier vos priorités.
                    </p>
                    <div class="flex items-center text-red-500 font-slogan text-sm">
                      <span class="material-icons text-sm mr-1">arrow_forward</span>
                      Retrouver sa direction
                    </div>
                  </div>
                </div>
                
                <!-- Point de connexion -->
                <div class="hidden lg:block w-4 h-4 bg-sage rounded-full border-4 border-white shadow-lg"></div>
                
                <div class="lg:w-1/2 lg:pl-8">
                  <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-2xl p-6 text-center">
                    <span class="material-icons text-red-400 text-6xl mb-4">navigation</span>
                    <p class="font-body text-ebony text-lg">Doutes, hésitations, manque de clarté</p>
                  </div>
                </div>
              </div>

              <!-- Étape 2 -->
              <div class="flex flex-col lg:flex-row-reverse items-center gap-8" data-aos="fade-up" data-aos-delay="400">
                <div class="lg:w-1/2 lg:pl-8">
                  <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-1 border border-sage/10">
                    <div class="flex items-center space-x-4 mb-4">
                      <div class="bg-gradient-to-br from-blue-100 to-blue-200 p-3 rounded-full">
                        <span class="material-icons text-blue-500 text-2xl">change_circle</span>
                      </div>
                      <div class="bg-blue-500 text-white px-3 py-1 rounded-full text-sm font-slogan uppercase tracking-wider">
                        Transition
                      </div>
                    </div>
                    <h3 class="font-heading text-2xl text-ebony mb-4">Période de transition</h3>
                    <p class="font-body text-ebony leading-relaxed mb-4">
                      Personnelle ou professionnelle. Vous traversez un changement et avez besoin de soutien pour naviguer cette période.
                    </p>
                    <div class="flex items-center text-blue-500 font-slogan text-sm">
                      <span class="material-icons text-sm mr-1">arrow_forward</span>
                      Accompagner le changement
                    </div>
                  </div>
                </div>
                
                <!-- Point de connexion -->
                <div class="hidden lg:block w-4 h-4 bg-sage rounded-full border-4 border-white shadow-lg"></div>
                
                <div class="lg:w-1/2 lg:pr-8">
                  <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-6 text-center">
                    <span class="material-icons text-blue-400 text-6xl mb-4">trending_up</span>
                    <p class="font-body text-ebony text-lg">Changements de vie, nouvelles étapes</p>
                  </div>
                </div>
              </div>

              <!-- Étape 3 -->
              <div class="flex flex-col lg:flex-row items-center gap-8" data-aos="fade-up" data-aos-delay="600">
                <div class="lg:w-1/2 lg:pr-8">
                  <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-1 border border-sage/10">
                    <div class="flex items-center space-x-4 mb-4">
                      <div class="bg-gradient-to-br from-orange-100 to-orange-200 p-3 rounded-full">
                        <span class="material-icons text-orange-500 text-2xl">self_improvement</span>
                      </div>
                      <div class="bg-orange-500 text-white px-3 py-1 rounded-full text-sm font-slogan uppercase tracking-wider">
                        Confiance
                      </div>
                    </div>
                    <h3 class="font-heading text-2xl text-ebony mb-4">Retrouver confiance en vous</h3>
                    <p class="font-body text-ebony leading-relaxed mb-4">
                      Et en vos capacités. Vous avez besoin de renforcer votre estime de soi et votre élan personnel.
                    </p>
                    <div class="flex items-center text-orange-500 font-slogan text-sm">
                      <span class="material-icons text-sm mr-1">arrow_forward</span>
                      Renforcer l'estime de soi
                    </div>
                  </div>
                </div>
                
                <!-- Point de connexion -->
                <div class="hidden lg:block w-4 h-4 bg-sage rounded-full border-4 border-white shadow-lg"></div>
                
                <div class="lg:w-1/2 lg:pl-8">
                  <div class="bg-gradient-to-br from-orange-50 to-orange-100 rounded-2xl p-6 text-center">
                    <span class="material-icons text-orange-400 text-6xl mb-4">favorite</span>
                    <p class="font-body text-ebony text-lg">Estime de soi, élan personnel</p>
                  </div>
                </div>
              </div>

              <!-- Étape 4 -->
              <div class="flex flex-col lg:flex-row-reverse items-center gap-8" data-aos="fade-up" data-aos-delay="800">
                <div class="lg:w-1/2 lg:pl-8">
                  <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-1 border border-sage/10">
                    <div class="flex items-center space-x-4 mb-4">
                      <div class="bg-gradient-to-br from-purple-100 to-purple-200 p-3 rounded-full">
                        <span class="material-icons text-purple-500 text-2xl">psychology</span>
                      </div>
                      <div class="bg-purple-500 text-white px-3 py-1 rounded-full text-sm font-slogan uppercase tracking-wider">
                        Émotions
                      </div>
                    </div>
                    <h3 class="font-heading text-2xl text-ebony mb-4">Gérer vos émotions</h3>
                    <p class="font-body text-ebony leading-relaxed mb-4">
                      Et vos relations. Vous cherchez un soutien pour mieux comprendre et gérer vos ressentis au quotidien.
                    </p>
                    <div class="flex items-center text-purple-500 font-slogan text-sm">
                      <span class="material-icons text-sm mr-1">arrow_forward</span>
                      Équilibrer les émotions
                    </div>
                  </div>
                </div>
                
                <!-- Point de connexion -->
                <div class="hidden lg:block w-4 h-4 bg-sage rounded-full border-4 border-white shadow-lg"></div>
                
                <div class="lg:w-1/2 lg:pr-8">

---
import MainLayout from '../../layouts/MainLayout.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';

const seo = {
  title: "Naturopathie animale – Soutenir la santé et le bien-être de vos compagnons naturellement | Harmonia et Vita",
  description: "Consultation de naturopathie animale à domicile ou à distance. Accompagnement naturel pour chiens et chats : troubles digestifs, stress, vitalité. Réservez votre séance.",
  keywords: "naturopathie animale, consultation animaux Gard, naturopathie chiens chats, soins naturels animaux, bien-être animal, phytothérapie animaux"
};

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Consultation Naturopathie Animale",
  "description": "Accompagnement naturopathique naturel pour chiens et chats",
  "provider": {
    "@type": "Person",
    "name": "Naima Tyzra",
    "jobTitle": "Naturopathe"
  },
  "areaServed": "France",
  "serviceType": "Naturopathie Animale",
  "offers": {
    "@type": "Offer",
    "price": "70",
    "priceCurrency": "EUR",
    "description": "Première séance de naturopathie animale"
  }
};
---

<MainLayout title={seo.title} description={seo.description}>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>

  <div class="pt-24">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden pb-16">
      <!-- Background avec image et overlay -->
      <div class="absolute inset-0">
        <img 
          src="/images/naturopathie-animale-harmonia-vita.jpg" 
          alt=""
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-ebony/70 via-ebony/50 to-ebony/30"></div>
      </div>
      
      <!-- Contenu principal -->
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            
            <!-- Texte principal -->
            <div class="text-white" data-aos="fade-right" data-aos-duration="1000" data-aos-delay="200">
              <div class="mb-6 mt-8" data-aos="fade-up" data-aos-duration="800" data-aos-delay="400">
                <span class="inline-block bg-sage/20 backdrop-blur-sm text-sage px-4 py-2 rounded-full text-sm font-slogan uppercase tracking-wider mb-4">
                  Consultation à domicile ou à distance
                </span>
              </div>
              
              <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl mb-6 leading-tight" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="600">
                Naturopathie animale
                <span class="block text-sage">Soutenir la santé et le bien-être de vos compagnons naturellement</span>
              </h1>
              
              <p class="font-body text-xl mb-8 text-white/90 leading-relaxed" data-aos="fade-up" data-aos-duration="800" data-aos-delay="800">
                Nos animaux, tout comme nous, peuvent traverser des déséquilibres physiques ou émotionnels. La naturopathie animale les accompagne de manière douce et naturelle.
              </p>
              
              <div class="flex flex-col sm:flex-row gap-4" data-aos="fade-up" data-aos-duration="800" data-aos-delay="1000">
                <Button href="/accompagnements/reservation" size="lg" variant="secondary">
                  Je réserve une séance pour mon animal
                </Button>
                <Button href="#details" size="lg" variant="outline" class="border-white text-white hover:bg-white hover:text-ebony">
                  En savoir plus
                </Button>
              </div>
            </div>
            
            <!-- Bloc résumé rapide -->
            <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-8 shadow-2xl mb-8" data-aos="fade-left" data-aos-duration="1000" data-aos-delay="400">
              <h3 class="font-heading text-2xl text-ebony mb-6 text-center">Informations pratiques</h3>
              
              <div class="space-y-6">
                <div class="flex items-center space-x-4 p-4 bg-cream/50 rounded-xl">
                  <div class="bg-sage/20 p-3 rounded-full">
                    <span class="material-icons text-sage text-2xl">schedule</span>
                  </div>
                  <div>
                    <p class="font-slogan text-sm text-gray-600 uppercase tracking-wider">Première séance</p>
                    <p class="font-body text-ebony font-semibold">1h à 2h</p>
                  </div>
                </div>
                
                <div class="flex items-center space-x-4 p-4 bg-cream/50 rounded-xl">
                  <div class="bg-sage/20 p-3 rounded-full">
                    <span class="material-icons text-sage text-2xl">update</span>
                  </div>
                  <div>
                    <p class="font-slogan text-sm text-gray-600 uppercase tracking-wider">Suivis</p>
                    <p class="font-body text-ebony font-semibold">30 à 45 min</p>
                  </div>
                </div>
                
                <div class="flex items-center space-x-4 p-4 bg-cream/50 rounded-xl">
                  <div class="bg-sage/20 p-3 rounded-full">
                    <span class="material-icons text-sage text-2xl">home</span>
                  </div>
                  <div>
                    <p class="font-slogan text-sm text-gray-600 uppercase tracking-wider">Format</p>
                    <p class="font-body text-ebony font-semibold">Présentiel ou à distance</p>
                  </div>
                </div>
                
                <div class="flex items-center space-x-4 p-4 bg-cream/50 rounded-xl">
                  <div class="bg-sage/20 p-3 rounded-full">
                    <span class="material-icons text-sage text-2xl">euro</span>
                  </div>
                  <div>
                    <p class="font-slogan text-sm text-gray-600 uppercase tracking-wider">Tarif</p>
                    <p class="font-body text-ebony font-semibold">70€ première – 50€ suivi</p>
                  </div>
                </div>
              </div>
              
              <div class="mt-8 pt-6 border-t border-sage/20">
                <Button href="/accompagnements/reservation" size="lg" class="w-full">
                  Réserver maintenant
                </Button>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center">
          <div class="w-1 h-3 bg-white/70 rounded-full mt-2 animate-pulse"></div>
        </div>
      </div>
    </section>

    <!-- Introduction -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div data-aos="fade-right">
              <p class="font-body text-lg text-ebony leading-relaxed mb-6">
                Nos animaux, tout comme nous, peuvent traverser des déséquilibres physiques ou émotionnels : troubles digestifs, fatigue, stress, anxiété, difficultés articulaires…
              </p>
              <p class="font-body text-lg text-ebony leading-relaxed">
                La naturopathie animale les accompagne de manière douce et naturelle, en respectant leur rythme et leur individualité, afin de renforcer leur vitalité et leur bien-être global.
              </p>
            </div>
            <div data-aos="fade-left">
              <img 
                src="/images/naturopathie-animale-banniere.jpg" 
                alt="Naturopathie animale – bien-être naturel pour chiens et chats"
                class="w-full h-80 object-cover rounded-2xl shadow-medium"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Cette séance est faite pour vous si... -->
    <section class="py-16 bg-cream">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="font-heading text-3xl md:text-4xl text-ebony text-center mb-12" data-aos="fade-up">
            Cette séance est faite pour vous si...
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-white rounded-2xl p-6 shadow-soft" data-aos="fade-up" data-aos-duration="800" data-aos-delay="200">
              <div class="flex items-start space-x-4">
                <span class="material-icons text-sage text-2xl mt-1">restaurant</span>
                <p class="font-body text-ebony">Votre animal souffre de troubles digestifs ou alimentaires</p>
              </div>
            </div>
            
            <div class="bg-white rounded-2xl p-6 shadow-soft" data-aos="fade-up" data-aos-duration="800" data-aos-delay="400">
              <div class="flex items-start space-x-4">
                <span class="material-icons text-sage text-2xl mt-1">mood_bad</span>
                <p class="font-body text-ebony">Il montre des signes de fatigue, stress ou anxiété</p>
              </div>
            </div>
            
            <div class="bg-white rounded-2xl p-6 shadow-soft" data-aos="fade-up" data-aos-duration="800" data-aos-delay="600">
              <div class="flex items-start space-x-4">
                <span class="material-icons text-sage text-2xl mt-1">home</span>
                <p class="font-body text-ebony">Il a besoin de soutien lors de changements (déménagement, nouvel arrivant, séparation)</p>
              </div>
            </div>
            
            <div class="bg-white rounded-2xl p-6 shadow-soft" data-aos="fade-up" data-aos-duration="800" data-aos-delay="800">
              <div class="flex items-start space-x-4">
                <span class="material-icons text-sage text-2xl mt-1">elderly</span>
                <p class="font-body text-ebony">Il souffre de douleurs articulaires ou de vieillissement prématuré</p>
              </div>
            </div>
            
            <div class="bg-white rounded-2xl p-6 shadow-soft" data-aos="fade-up" data-aos-duration="800" data-aos-delay="1000">
              <div class="flex items-start space-x-4">
                <span class="material-icons text-sage text-2xl mt-1">health_and_safety</span>
                <p class="font-body text-ebony">Vous souhaitez renforcer son système immunitaire et prévenir les déséquilibres</p>
              </div>
            </div>
            
            <div class="bg-white rounded-2xl p-6 shadow-soft" data-aos="fade-up" data-aos-duration="800" data-aos-delay="1200">
              <div class="flex items-start space-x-4">
                <span class="material-icons text-sage text-2xl mt-1">eco</span>
                <p class="font-body text-ebony">Vous cherchez une approche naturelle, complémentaire aux soins vétérinaires</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Les bénéfices -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div data-aos="fade-right">
              <h2 class="font-heading text-3xl md:text-4xl text-ebony mb-8">
                Les bénéfices de la naturopathie animale
              </h2>
              
              <div class="space-y-6">
                <div class="flex items-start space-x-4">
                  <span class="material-icons text-sage text-xl mt-1">favorite</span>
                  <p class="font-body text-ebony">Amélioration de la vitalité et de l'énergie au quotidien</p>
                </div>
                
                <div class="flex items-start space-x-4">
                  <span class="material-icons text-sage text-xl mt-1">health_and_safety</span>
                  <p class="font-body text-ebony">Renforcement naturel du système immunitaire</p>
                </div>
                
                <div class="flex items-start space-x-4">
                  <span class="material-icons text-sage text-xl mt-1">self_improvement</span>
                  <p class="font-body text-ebony">Apaisement du stress et des émotions</p>
                </div>
                
                <div class="flex items-start space-x-4">
                  <span class="material-icons text-sage text-xl mt-1">healing</span>
                  <p class="font-body text-ebony">Soutien de la digestion et du confort articulaire</p>
                </div>
                
                <div class="flex items-start space-x-4">
                  <span class="material-icons text-sage text-xl mt-1">calendar_today</span>
                  <p class="font-body text-ebony">Prévention des déséquilibres liés à l'âge ou aux saisons</p>
                </div>
                
                <div class="flex items-start space-x-4">
                  <span class="material-icons text-sage text-xl mt-1">psychology</span>
                  <p class="font-body text-ebony">Une meilleure compréhension des besoins profonds de votre compagnon</p>
                </div>
              </div>
            </div>
            
            <div data-aos="fade-left">
              <img 
                src="/images/naturopathie-animale-benefices.jpg" 
                alt="Bienfaits naturopathie animale – Harmonia et Vita"
                class="w-full h-96 object-cover rounded-2xl shadow-medium"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Déroulement d'une séance -->
    <section class="py-16 bg-cream">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="font-heading text-3xl md:text-4xl text-ebony text-center mb-12" data-aos="fade-up">
            Déroulement d'une séance de naturopathie animale
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="bg-white rounded-2xl p-6 shadow-soft text-center" data-aos="fade-up" data-aos-duration="800" data-aos-delay="200">
              <div class="bg-sage/10 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <span class="material-icons text-sage text-2xl">hearing</span>
              </div>
              <h3 class="font-heading text-xl text-ebony mb-3">1. Échange d'accueil</h3>
              <p class="font-body text-gray-600">Recueil de l'historique de l'animal (alimentation, environnement, comportements, santé).</p>
            </div>
            
            <div class="bg-white rounded-2xl p-6 shadow-soft text-center" data-aos="fade-up" data-aos-duration="800" data-aos-delay="400">
              <div class="bg-sage/10 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <span class="material-icons text-sage text-2xl">visibility</span>
              </div>
              <h3 class="font-heading text-xl text-ebony mb-3">2. Observation globale</h3>
              <p class="font-body text-gray-600">Compréhension de son état énergétique et physique.</p>
            </div>
            
            <div class="bg-white rounded-2xl p-6 shadow-soft text-center" data-aos="fade-up" data-aos-duration="800" data-aos-delay="600">
              <div class="bg-sage/10 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <span class="material-icons text-sage text-2xl">assignment</span>
              </div>
              <h3 class="font-heading text-xl text-ebony mb-3">3. Protocole personnalisé</h3>
              <p class="font-body text-gray-600">Conseils adaptés (nutrition, hygiène de vie, phytothérapie, fleurs de Bach, compléments naturels).</p>
            </div>
            
            <div class="bg-white rounded-2xl p-6 shadow-soft text-center" data-aos="fade-up" data-aos-duration="800" data-aos-delay="800">
              <div class="bg-sage/10 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <span class="material-icons text-sage text-2xl">trending_up</span>
              </div>
              <h3 class="font-heading text-xl text-ebony mb-3">4. Suivi</h3>
              <p class="font-body text-gray-600">Ajustement et accompagnement selon l'évolution de l'animal.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Détails pratiques -->
    <section id="details" class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="font-heading text-3xl md:text-4xl text-ebony text-center mb-12" data-aos="fade-up">
            Détails pratiques
          </h2>
          
          <div class="bg-cream rounded-2xl p-8 shadow-soft" data-aos="fade-up">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div>
                <h3 class="font-heading text-2xl text-ebony mb-4">Première séance</h3>
                <div class="space-y-3">
                  <div class="flex items-center space-x-3">
                    <span class="material-icons text-sage">schedule</span>
                    <span class="font-body text-ebony">Durée : 1h à 2h</span>
                  </div>
                  <div class="flex items-center space-x-3">
                    <span class="material-icons text-sage">euro</span>
                    <span class="font-body text-ebony">Tarif : 70€</span>
                  </div>
                </div>
              </div>
              
              <div>
                <h3 class="font-heading text-2xl text-ebony mb-4">Séances de suivi</h3>
                <div class="space-y-3">
                  <div class="flex items-center space-x-3">
                    <span class="material-icons text-sage">schedule</span>
                    <span class="font-body text-ebony">Durée : 30 à 45 min</span>
                  </div>
                  <div class="flex items-center space-x-3">
                    <span class="material-icons text-sage">euro</span>
                    <span class="font-body text-ebony">Tarif : 50€</span>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="mt-8 pt-6 border-t border-sage/20">
              <div class="flex items-center space-x-3 justify-center mb-4">
                <span class="material-icons text-sage">home</span>
                <span class="font-body text-ebony">Format : présentiel (chez vous) ou à distance (visio)</span>
              </div>
              
              <div class="bg-white rounded-xl p-6 mt-6">
                <h4 class="font-heading text-lg text-ebony mb-4">📍 Déplacements à domicile</h4>
                <p class="font-body text-ebony mb-4">
                  Les accompagnements peuvent être réalisés directement au domicile, pour plus de confort et de sérénité, dans les départements suivants : Gard, Ardèche, Vaucluse, Drôme et Bouches-du-Rhône, dans un rayon de 70 km autour de Salazac.
                </p>
                
                <div class="space-y-2">
                  <div class="flex items-center space-x-3">
                    <span class="material-icons text-sage text-sm">check_circle</span>
                    <span class="font-body text-ebony text-sm">Frais de déplacement inclus jusqu'à 10 km autour de Salazac</span>
                  </div>
                  <div class="flex items-center space-x-3">
                    <span class="material-icons text-sage text-sm">info</span>
                    <span class="font-body text-ebony text-sm">Au-delà : participation aux frais selon la distance, indiquée lors de la réservation</span>
                  </div>
                </div>
              </div>
              
              <div class="bg-white rounded-xl p-6 mt-4">
                <h4 class="font-heading text-lg text-ebony mb-4">🐾 Forfaits multi-animaux</h4>
                <p class="font-body text-ebony mb-4">
                  Forfaits pour plusieurs animaux du même foyer disponibles sur demande.
                </p>
                <Button href="/contact" variant="outline" class="w-full md:w-auto">
                  Me contacter pour un devis personnalisé
                </Button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Pourquoi choisir Harmonia et Vita -->
    <section class="py-16 bg-cream">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div data-aos="fade-right">
              <h2 class="font-heading text-3xl md:text-4xl text-ebony mb-8">
                Pourquoi choisir Harmonia et Vita ?
              </h2>
              
              <div class="space-y-6">
                <div class="flex items-start space-x-4">
                  <span class="material-icons text-sage text-xl mt-1">psychology</span>
                  <p class="font-body text-ebony">Une approche globale qui respecte la singularité de chaque animal</p>
                </div>
                
                <div class="flex items-start space-x-4">
                  <span class="material-icons text-sage text-xl mt-1">healing</span>
                  <p class="font-body text-ebony">Un accompagnement en douceur, complémentaire au suivi vétérinaire</p>
                </div>
                
                <div class="flex items-start space-x-4">
                  <span class="material-icons text-sage text-xl mt-1">eco</span>
                  <p class="font-body text-ebony">Expérience en soins holistiques, reliant corps, émotions et énergie</p>
                </div>
              </div>
            </div>
            
            <div data-aos="fade-left">
              <img 
                src="/images/naturopathie-animale-portrait.jpg" 
                alt="Consultation de naturopathie animale – Harmonia et Vita"
                class="w-full h-96 object-cover rounded-2xl shadow-medium"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Final -->
    <section class="py-20 bg-gradient-to-b from-sage to-eucalyptus text-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center" data-aos="fade-up">
          <h2 class="font-heading text-3xl md:text-4xl mb-6">
            Réservez votre séance
          </h2>
          <p class="font-body text-lg mb-8 opacity-90">
            Offrez à votre compagnon un accompagnement naturel pour retrouver équilibre et vitalité.
          </p>
          <p class="font-body text-lg mb-8 opacity-90">
            Réservez dès aujourd'hui votre séance de naturopathie animale et donnez à votre animal les soins qu'il mérite.
          </p>
          <Button href="/accompagnements/reservation" variant="secondary" size="lg">
            Je réserve une séance pour mon animal
          </Button>
        </div>
      </div>
    </section>
  </div>
</MainLayout>

---
import MainLayout from '../../layouts/MainLayout.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';

const seo = {
  title: "Naturopathie humaine – Retrouver équilibre et vitalité naturellement | Harmonia et Vita",
  description: "Consultation de naturopathie humaine à distance. Bilan complet, conseils personnalisés et accompagnement naturel pour retrouver équilibre et vitalité. Réservez votre séance.",
  keywords: "naturopathie humaine, consultation naturopathie Gard, naturopathie en ligne, accompagnement naturel santé, techniques naturelles bien-être, naturopathie énergétique"
};

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Consultation Naturopathie Humaine",
  "description": "Accompagnement naturopathique personnalisé pour retrouver équilibre et vitalité naturellement",
  "provider": {
    "@type": "Person",
    "name": "Naima Tyzra",
    "jobTitle": "Naturopathe"
  },
  "areaServed": "France",
  "serviceType": "Naturopathie",
  "offers": {
    "@type": "Offer",
    "price": "150",
    "priceCurrency": "EUR",
    "description": "Première séance de naturopathie humaine"
  }
};
---

<MainLayout title={seo.title} description={seo.description}>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>

  <div class="pt-24">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden pb-16">
      <!-- Background avec image et overlay -->
      <div class="absolute inset-0">
        <img 
          src="/images/naturopathie-humaine.jpg" 
          alt=""
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-ebony/70 via-ebony/50 to-ebony/30"></div>
      </div>
      
      <!-- Contenu principal -->
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-6xl mx-auto">
          <div class="text-center">
            
            <!-- Texte principal -->
            <div class="text-white mb-12" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200">
              <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl mb-6 leading-tight" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="400">
                Naturopathie
                <span class="block text-sage">Retrouver équilibre et vitalité naturellement</span>
              </h1>
              
              <p class="font-body text-xl mb-8 text-white/90 leading-relaxed italic" data-aos="fade-up" data-aos-duration="800" data-aos-delay="600">
                "La santé n'est pas l'absence de maladie, mais l'harmonie entre le corps, l'esprit et l'âme"
              </p>
              
              <div class="flex flex-col sm:flex-row gap-4 justify-center" data-aos="fade-up" data-aos-duration="800" data-aos-delay="800">
                <Button href="/accompagnements/reservation" size="lg" variant="secondary">
                  Je réserve ma séance
                </Button>
                <Button href="#details" size="lg" variant="outline" class="border-white text-white hover:bg-white hover:text-ebony">
                  En savoir plus
                </Button>
              </div>
            </div>
            
            <!-- Bulles d'informations pratiques -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="1000">
              <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center">
                <div class="flex justify-center mb-3">
                  <span class="material-icons text-white text-3xl">schedule</span>
                </div>
                <p class="font-body text-white font-bold text-2xl mb-1">1h30</p>
                <p class="font-slogan text-xs text-white/80 uppercase tracking-wider">PREMIÈRE SÉANCE</p>
              </div>
              
              <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center">
                <div class="flex justify-center mb-3">
                  <span class="material-icons text-white text-3xl">video_call</span>
                </div>
                <p class="font-body text-white font-bold text-2xl mb-1">À distance</p>
                <p class="font-slogan text-xs text-white/80 uppercase tracking-wider">VISIOCONFÉRENCE</p>
              </div>
              
              <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center">
                <div class="flex justify-center mb-3">
                  <span class="material-icons text-white text-3xl">euro</span>
                </div>
                <p class="font-body text-white font-bold text-2xl mb-1">150€</p>
                <p class="font-slogan text-xs text-white/80 uppercase tracking-wider">LA SÉANCE</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center">
          <div class="w-1 h-3 bg-white/70 rounded-full mt-2 animate-pulse"></div>
        </div>
      </div>
    </section>

    <!-- Introduction -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            
            <div data-aos="fade-right">
              <div class="bg-white/90 backdrop-blur-md rounded-3xl p-8 shadow-2xl border border-sage/20 relative overflow-hidden">
                <!-- Éléments décoratifs -->
                <div class="absolute top-0 right-0 w-20 h-20 bg-sage/10 rounded-full -translate-y-10 translate-x-10"></div>
                <div class="absolute bottom-0 left-0 w-16 h-16 bg-eucalyptus/10 rounded-full translate-y-8 -translate-x-8"></div>
                
                <div class="relative z-10">
                  <div class="flex items-start space-x-4 mb-6">
                    <div class="bg-sage/20 p-3 rounded-full flex-shrink-0">
                      <span class="material-icons text-sage text-xl">healing</span>
                    </div>
                    <p class="font-body text-lg text-ebony leading-relaxed">
                      La naturopathie est une approche douce et globale de la santé, qui considère l'être humain dans toutes ses dimensions : physique, émotionnelle, énergétique et spirituelle.
                    </p>
                  </div>
                  
                  <div class="flex items-start space-x-4">
                    <div class="bg-eucalyptus/20 p-3 rounded-full flex-shrink-0">
                      <span class="material-icons text-eucalyptus text-xl">self_improvement</span>
                    </div>
                    <p class="font-body text-lg text-ebony leading-relaxed">
                      Elle aide à renforcer vos défenses naturelles, retrouver un équilibre durable et devenir acteur de votre propre bien-être.
                    </p>
                  </div>
                </div>
              </div>
            </div>
            
            <div data-aos="fade-left">
              <div class="relative group">
                <div class="absolute inset-0 bg-gradient-to-r from-sage/20 to-eucalyptus/20 rounded-3xl transform rotate-2 group-hover:rotate-0 transition-transform duration-500"></div>
                <div class="absolute inset-0 bg-gradient-to-l from-eucalyptus/20 to-sage/20 rounded-3xl transform -rotate-1 group-hover:rotate-0 transition-transform duration-500 delay-100"></div>
                
                <img 
                  src="/images/naturopathie-benefice.jpg" 
                  alt="Naturopathie humaine – retrouver équilibre et vitalité naturellement"
                  class="w-full h-80 object-cover rounded-3xl shadow-2xl relative z-10 transition-all duration-500 group-hover:scale-105 group-hover:shadow-3xl"
                />
                
                <!-- Overlay dynamique -->
                <div class="absolute inset-0 bg-gradient-to-t from-ebony/30 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-3xl z-20"></div>
                
                <!-- Badge flottant -->
                <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm text-sage px-4 py-2 rounded-full text-sm font-semibold shadow-lg z-30 transform translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
                  ✨ Approche naturelle
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Cette séance est faite pour vous si... -->
    <section class="py-16 bg-cream relative overflow-hidden">
      <!-- Éléments décoratifs en arrière-plan -->
      <div class="absolute top-0 left-0 w-64 h-64 bg-sage/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-48 h-48 bg-eucalyptus/5 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 left-1/4 w-32 h-32 bg-sage/10 rounded-full blur-2xl"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto">
          <h2 class="font-heading text-3xl md:text-4xl text-ebony text-center mb-12" data-aos="fade-up">
            Cette séance est faite pour vous si...
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 relative">
            <!-- Lignes de connexion -->
            <div class="hidden md:block absolute top-1/2 left-1/4 w-1/2 h-0.5 bg-gradient-to-r from-sage/30 to-eucalyptus/30 transform -translate-y-1/2 z-0"></div>
            <div class="hidden md:block absolute top-1/2 left-1/4 w-1/2 h-0.5 bg-gradient-to-r from-eucalyptus/30 to-sage/30 transform -translate-y-1/2 translate-y-8 z-0"></div>
            
            <div class="group bg-white rounded-2xl p-6 shadow-soft transition-all duration-300 hover:shadow-2xl hover:scale-105 hover:border-2 hover:border-sage/30 relative z-10" data-aos="fade-up" data-aos-duration="800" data-aos-delay="200">
              <div class="flex items-start space-x-4">
                <div class="bg-sage/20 p-3 rounded-full transition-all duration-300 group-hover:scale-110 group-hover:rotate-12 group-hover:bg-sage/30 relative">
                  <span class="material-icons text-sage text-2xl transition-all duration-300 group-hover:scale-110">energy_savings_leaf</span>
                  <!-- Élément décoratif -->
                  <div class="absolute -top-1 -right-1 w-3 h-3 bg-sage/40 rounded-full"></div>
                </div>
                <p class="font-body text-ebony group-hover:text-ebony/90 transition-colors duration-300">Vous ressentez une fatigue persistante ou un manque d'énergie</p>
              </div>
            </div>
            
            <div class="group bg-white rounded-2xl p-6 shadow-soft transition-all duration-300 hover:shadow-2xl hover:scale-105 hover:border-2 hover:border-eucalyptus/30 relative z-10" data-aos="fade-up" data-aos-duration="800" data-aos-delay="400">
              <div class="flex items-start space-x-4">
                <div class="bg-eucalyptus/20 p-3 rounded-full transition-all duration-300 group-hover:scale-110 group-hover:-rotate-12 group-hover:bg-eucalyptus/30 relative">
                  <span class="material-icons text-eucalyptus text-2xl transition-all duration-300 group-hover:scale-110">healing</span>
                  <!-- Élément décoratif -->
                  <div class="absolute -top-1 -right-1 w-3 h-3 bg-eucalyptus/40 rounded-full"></div>
                </div>
                <p class="font-body text-ebony group-hover:text-ebony/90 transition-colors duration-300">Vous cherchez une alternative naturelle aux médicaments pour mieux vivre au quotidien</p>
              </div>
            </div>
            
            <div class="group bg-white rounded-2xl p-6 shadow-soft transition-all duration-300 hover:shadow-2xl hover:scale-105 hover:border-2 hover:border-sage/30 relative z-10" data-aos="fade-up" data-aos-duration="800" data-aos-delay="600">
              <div class="flex items-start space-x-4">
                <div class="bg-sage/20 p-3 rounded-full transition-all duration-300 group-hover:scale-110 group-hover:rotate-12 group-hover:bg-sage/30 relative">
                  <span class="material-icons text-sage text-2xl transition-all duration-300 group-hover:scale-110">self_improvement</span>
                  <!-- Élément décoratif -->
                  <div class="absolute -top-1 -right-1 w-3 h-3 bg-sage/40 rounded-full"></div>
                </div>
                <p class="font-body text-ebony group-hover:text-ebony/90 transition-colors duration-300">Vous voulez mieux gérer votre stress, vos émotions ou vos troubles du sommeil</p>
              </div>
            </div>
            
            <div class="group bg-white rounded-2xl p-6 shadow-soft transition-all duration-300 hover:shadow-2xl hover:scale-105 hover:border-2 hover:border-eucalyptus/30 relative z-10" data-aos="fade-up" data-aos-duration="800" data-aos-delay="800">
              <div class="flex items-start space-x-4">
                <div class="bg-eucalyptus/20 p-3 rounded-full transition-all duration-300 group-hover:scale-110 group-hover:-rotate-12 group-hover:bg-eucalyptus/30 relative">
                  <span class="material-icons text-eucalyptus text-2xl transition-all duration-300 group-hover:scale-110">restaurant</span>
                  <!-- Élément décoratif -->
                  <div class="absolute -top-1 -right-1 w-3 h-3 bg-eucalyptus/40 rounded-full"></div>
                </div>
                <p class="font-body text-ebony group-hover:text-ebony/90 transition-colors duration-300">Vous souhaitez améliorer votre digestion ou renforcer vos défenses immunitaires</p>
              </div>
            </div>
            
            <div class="group bg-white rounded-2xl p-6 shadow-soft md:col-span-2 transition-all duration-300 hover:shadow-2xl hover:scale-105 hover:border-2 hover:border-sage/30 relative z-10" data-aos="fade-up" data-aos-duration="800" data-aos-delay="1000">
              <div class="flex items-start space-x-4">
                <div class="bg-sage/20 p-3 rounded-full transition-all duration-300 group-hover:scale-110 group-hover:rotate-12 group-hover:bg-sage/30 relative">
                  <span class="material-icons text-sage text-2xl transition-all duration-300 group-hover:scale-110">calendar_today</span>
                  <!-- Élément décoratif -->
                  <div class="absolute -top-1 -right-1 w-3 h-3 bg-sage/40 rounded-full"></div>
                </div>
                <p class="font-body text-ebony group-hover:text-ebony/90 transition-colors duration-300">Vous désirez prévenir les déséquilibres liés aux saisons ou aux changements de vie</p>
              </div>
            </div>
          </div>
          
          <!-- CTA Section -->
          <div class="text-center mt-12" data-aos="fade-up" data-aos-delay="1200">
            <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-soft border border-sage/20">
              <p class="font-body text-lg text-ebony mb-6">
                Vous vous reconnaissez dans ces situations ? 
                <span class="text-sage font-semibold">Il est temps d'agir pour votre bien-être !</span>
              </p>
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <Button href="/accompagnements/reservation" size="lg" class="bg-gradient-to-r from-sage to-eucalyptus hover:from-eucalyptus hover:to-sage transition-all duration-300">
                  <span class="material-icons mr-2">calendar_today</span>
                  Réserver maintenant
                </Button>
                <Button href="/contact" size="lg" variant="outline" class="border-sage text-sage hover:bg-sage hover:text-white transition-all duration-300">
                  <span class="material-icons mr-2">phone</span>
                  Questions ?
                </Button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Les bénéfices -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="relative">
            <!-- Image de fond -->
            <div class="relative rounded-2xl overflow-hidden shadow-medium">
              <img 
                src="/images/naturopathie-humaine-banniere.jpg" 
                alt="Bienfaits de la naturopathie humaine – Harmonia et Vita"
                class="w-full h-[500px] object-cover object-center"
              />
              <!-- Overlay pour améliorer la lisibilité -->
              <div class="absolute inset-0 bg-gradient-to-r from-ebony/40 via-ebony/20 to-transparent"></div>
              
              <!-- Cartes superposées -->
              <div class="absolute inset-0 flex items-center justify-between p-12">
                <!-- Carte de citation -->
                <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-8 max-w-md" data-aos="fade-right">
                  <p class="font-handwriting text-xl text-ebony leading-relaxed italic text-center">
                    "La clarté vient de l'écoute de son cœur et de la confiance en son intuition."
                  </p>
                </div>
                
                <!-- Carte "Les bénéfices" -->
                <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-8 max-w-lg" data-aos="fade-left">
                  <h3 class="font-heading text-2xl text-ebony mb-6">Les bénéfices d'un accompagnement naturopathique</h3>
                  
                  <div class="space-y-4">
                    <div class="flex items-start space-x-3">
                      <span class="material-icons text-sage text-lg mt-1">psychology</span>
                      <p class="font-body text-ebony text-sm">Une vision globale de votre santé (corps, esprit, énergie)</p>
                    </div>
                    
                    <div class="flex items-start space-x-3">
                      <span class="material-icons text-sage text-lg mt-1">person</span>
                      <p class="font-body text-ebony text-sm">Des conseils personnalisés, adaptés à vos besoins et à votre rythme de vie</p>
                    </div>
                    
                    <div class="flex items-start space-x-3">
                      <span class="material-icons text-sage text-lg mt-1">eco</span>
                      <p class="font-body text-ebony text-sm">Des solutions naturelles et durables : alimentation, hygiène de vie, plantes, relaxation</p>
                    </div>
                    
                    <div class="flex items-start space-x-3">
                      <span class="material-icons text-sage text-lg mt-1">self_improvement</span>
                      <p class="font-body text-ebony text-sm">Une meilleure connaissance de vous-même et de votre corps</p>
                    </div>
                    
                    <div class="flex items-start space-x-3">
                      <span class="material-icons text-sage text-lg mt-1">favorite</span>
                      <p class="font-body text-ebony text-sm">Un accompagnement respectueux, bienveillant et sans jugement</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Déroulement d'une séance -->
    <section class="py-16 bg-cream">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <!-- Header -->
          <div class="text-center mb-12" data-aos="fade-up">
            <h2 class="font-heading text-3xl md:text-4xl text-ebony mb-4">
              <span class="text-sage">Déroulement</span> d'une séance
            </h2>
            <div class="w-24 h-1 bg-gradient-to-r from-sage to-eucalyptus mx-auto mb-6"></div>
            <p class="font-body text-lg text-gray-700 max-w-2xl mx-auto">
              Découvrez comment se déroule une séance d'accompagnement personnel étape par étape.
            </p>
          </div>
          
          <!-- Cartes des étapes -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 relative">
            <!-- Ligne de connexion -->
            <div class="hidden lg:block absolute top-1/2 left-0 right-0 h-0.5 bg-gray-300 transform -translate-y-1/2 z-0"></div>
            
            <!-- Étape 1 -->
            <div class="bg-white rounded-2xl p-6 shadow-soft text-center relative z-10" data-aos="fade-up" data-aos-duration="800" data-aos-delay="200">
              <div class="bg-sage rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-4">
                <span class="font-heading text-white font-bold text-lg">1</span>
              </div>
              <div class="mb-4">
                <span class="material-icons text-sage text-2xl">hearing</span>
              </div>
              <h3 class="font-heading text-xl text-ebony mb-3">Écoute & accueil</h3>
              <p class="font-body text-gray-600 text-sm">Un temps d'échange pour exprimer vos besoins, vos ressentis et vos objectifs dans un espace bienveillant.</p>
            </div>
            
            <!-- Étape 2 -->
            <div class="bg-white rounded-2xl p-6 shadow-soft text-center relative z-10" data-aos="fade-up" data-aos-duration="800" data-aos-delay="400">
              <div class="bg-eucalyptus rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-4">
                <span class="font-heading text-white font-bold text-lg">2</span>
              </div>
              <div class="mb-4">
                <span class="material-icons text-eucalyptus text-2xl">search</span>
              </div>
              <h3 class="font-heading text-xl text-ebony mb-3">Exploration guidée</h3>
              <p class="font-body text-gray-600 text-sm">À travers questions, outils de coaching et guidance intuitive pour approfondir votre réflexion.</p>
            </div>
            
            <!-- Étape 3 -->
            <div class="bg-white rounded-2xl p-6 shadow-soft text-center relative z-10" data-aos="fade-up" data-aos-duration="800" data-aos-delay="600">
              <div class="bg-eucalyptus rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-4">
                <span class="font-heading text-white font-bold text-lg">3</span>
              </div>
              <div class="mb-4">
                <span class="material-icons text-eucalyptus text-2xl">visibility</span>
              </div>
              <h3 class="font-heading text-xl text-ebony mb-3">Mise en lumière</h3>
              <p class="font-body text-gray-600 text-sm">Identification de vos blocages, croyances ou freins inconscients pour les transformer en leviers.</p>
            </div>
            
            <!-- Étape 4 -->
            <div class="bg-white rounded-2xl p-6 shadow-soft text-center relative z-10" data-aos="fade-up" data-aos-duration="800" data-aos-delay="800">
              <div class="bg-sage rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-4">
                <span class="font-heading text-white font-bold text-lg">4</span>
              </div>
              <div class="mb-4">
                <span class="material-icons text-sage text-2xl">trending_up</span>
              </div>
              <h3 class="font-heading text-xl text-ebony mb-3">Pistes concrètes</h3>
              <p class="font-body text-gray-600 text-sm">Conseils pratiques, exercices ou rituels personnalisés pour avancer sereinement dans votre vie.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Détails pratiques -->
    <section id="details" class="py-16 bg-gradient-to-br from-cream via-white to-sage/10">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="font-heading text-3xl md:text-4xl text-ebony text-center mb-12" data-aos="fade-up">
            Détails pratiques
          </h2>
          
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8" data-aos="fade-up">
            <!-- Card Première séance -->
            <div class="group relative">
              <div class="bg-white/80 backdrop-blur-md rounded-3xl p-8 shadow-soft border border-white/50 transition-all duration-500 hover:shadow-2xl hover:scale-105 hover:bg-white/90">
                <div class="absolute top-4 right-4">
                  <div class="bg-gradient-to-r from-sage to-eucalyptus text-white px-4 py-2 rounded-full text-sm font-semibold">
                    Recommandé
                  </div>
                </div>
                
                <div class="text-center mb-6">
                  <div class="bg-gradient-to-r from-sage to-eucalyptus rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
                    <span class="material-icons text-white text-3xl">star</span>
                  </div>
                  <h3 class="font-heading text-2xl text-ebony mb-2">Première séance</h3>

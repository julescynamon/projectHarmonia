---
// src/pages/accompagnements/soins-energetiques-animaux.astro
import MainLayout from '../../layouts/MainLayout.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';

const seo = {
  title: "Soins énergétiques animaux – Soutenir la santé et l'équilibre de vos compagnons | La Maison Sattvaïa",
  description: "Soins énergétiques pour animaux en présentiel ou à distance. Apaisement du stress, rééquilibrage énergétique et soutien de la vitalité naturelle. Tarif 50€.",
  keywords: "soin énergétique animal, soin énergétique chien, soin énergétique chat, soin énergétique cheval, soin énergétique animaux Gard, rééquilibrage énergétique animal"
};

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Soins énergétiques animaux",
  "description": "Soins énergétiques pour soutenir la santé et l'équilibre de vos compagnons animaux",
  "provider": {
    "@type": "Person",
    "name": "Naima Tyzra",
    "jobTitle": "Praticienne en soins énergétiques"
  },
  "areaServed": "France",
  "serviceType": "Soin énergétique animal",
  "offers": {
    "@type": "Offer",
    "price": "50",
    "priceCurrency": "EUR",
    "description": "Soin énergétique animal"
  }
};
---

<MainLayout title={seo.title} description={seo.description}>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>

  <div>
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden pb-16 hero-section">
      <!-- Background avec image et overlay -->
      <div class="absolute inset-0">
        <img 
          src="/images/soin-energetique-animaux-la-maison-sattvaia.webp" 
          alt=""
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-ebony/70 via-ebony/50 to-ebony/30"></div>
      </div>
      
      <!-- Contenu principal centré -->
      <div class="container mx-auto px-4 relative z-10 flex flex-col justify-center min-h-screen">
        <div class="max-w-4xl mx-auto text-center">
          <!-- En-tête centré -->
          <div class="motion-safe:animate-fade-in">
            
            
            <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl mb-8 leading-tight text-white drop-shadow-[0_2px_8px_rgba(0,0,0,0.3)]" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="600">
              Soins énergétiques animaux
              <span class="block text-sage mt-10 typewriter-text text-2xl md:text-3xl lg:text-4xl" id="hero-typewriter">Soutenir la santé et l'équilibre de vos compagnons</span>
            </h1>
            
            <p class="font-body text-xl mb-10 text-white/90 leading-relaxed max-w-3xl mx-auto drop-shadow-[0_2px_4px_rgba(0,0,0,0.2)] italic" data-aos="fade-up" data-aos-duration="800" data-aos-delay="800">
              Nos animaux ressentent nos émotions, portent nos stress et peuvent développer des blocages énergétiques qui affectent leur bien-être.
            </p>
          </div>
          
          <!-- Informations pratiques en petites bulles -->
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-12" data-aos="fade-up" data-aos-duration="800" data-aos-delay="1000">
            <!-- Bulle 1: Durée -->
            <div class="group relative overflow-hidden rounded-xl backdrop-blur-sm transition-all duration-500 hover:transform hover:scale-105 w-32 h-32">
              <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-white/5 border border-white/20 rounded-xl"></div>
              <div class="relative p-6 text-center flex flex-col justify-center items-center h-full">
                <div class="bg-white/20 rounded-full w-8 h-8 flex items-center justify-center mb-4">
                  <span class="material-icons text-white text-lg">schedule</span>
                </div>
                <p class="font-heading text-lg text-white mb-3 drop-shadow-[0_2px_4px_rgba(0,0,0,0.4)] leading-tight">
                  45 min – 1h
                </p>
                <p class="text-white/90 text-xs uppercase tracking-wider font-medium leading-tight">
                  Durée séance
                </p>
              </div>
            </div>
            
            <!-- Bulle 2: Format -->
            <div class="group relative overflow-hidden rounded-xl backdrop-blur-sm transition-all duration-500 hover:transform hover:scale-105 w-44 h-32">
              <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-white/5 border border-white/20 rounded-xl"></div>
              <div class="relative p-6 text-center flex flex-col justify-center items-center h-full">
                <div class="bg-white/20 rounded-full w-8 h-8 flex items-center justify-center mb-4">
                  <span class="material-icons text-white text-lg">video_call</span>
                </div>
                <p class="font-heading text-lg text-white mb-3 drop-shadow-[0_2px_4px_rgba(0,0,0,0.4)] leading-tight">
                  Présentiel ou distance
                </p>
                <p class="text-white/90 text-xs uppercase tracking-wider font-medium leading-tight px-1">
                  Chez vous ou visio
                </p>
              </div>
            </div>
            
            <!-- Bulle 3: Tarif -->
            <div class="group relative overflow-hidden rounded-xl backdrop-blur-sm transition-all duration-500 hover:transform hover:scale-105 w-32 h-32">
              <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-white/5 border border-white/20 rounded-xl"></div>
              <div class="relative p-6 text-center flex flex-col justify-center items-center h-full">
                <div class="bg-white/20 rounded-full w-8 h-8 flex items-center justify-center mb-4">
                  <span class="material-icons text-white text-lg">euro</span>
                </div>
                <p class="font-heading text-lg text-white mb-3 drop-shadow-[0_2px_4px_rgba(0,0,0,0.4)] leading-tight">
                  50€
                </p>
                <p class="text-white/90 text-xs uppercase tracking-wider font-medium leading-tight">
                  la séance
                </p>
              </div>
            </div>
          </div>
          
          <!-- Boutons CTA -->
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center" data-aos="fade-up" data-aos-duration="800" data-aos-delay="1200">
            <Button href="/accompagnements/reservation" size="lg" variant="secondary">
              Je réserve un soin énergétique pour mon animal
            </Button>
            <Button href="#details" size="lg" variant="outline" class="border-white text-white hover:bg-sage hover:text-ebony">
              En savoir plus
            </Button>
          </div>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center">
          <div class="w-1 h-3 bg-white/70 rounded-full mt-2 animate-pulse"></div>
        </div>
      </div>
    </section>

    <!-- Introduction - Design moderne avec image de fond -->
    <section class="py-24 bg-gradient-to-br from-sage/10 via-cream to-white relative overflow-hidden">
      <!-- Éléments décoratifs en arrière-plan -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-20 left-10 w-2 h-2 bg-sage rounded-full animate-pulse"></div>
        <div class="absolute top-40 right-20 w-1 h-1 bg-gold rounded-full animate-bounce"></div>
        <div class="absolute bottom-20 left-1/4 w-3 h-3 bg-eucalyptus rounded-full animate-ping"></div>
        <div class="absolute bottom-40 right-1/3 w-1 h-1 bg-sage rounded-full animate-pulse"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-6xl mx-auto">
          <!-- Titre principal avec effet de gradient -->
          <div class="text-center mb-12" data-aos="fade-up">
            <h2 class="font-heading text-4xl md:text-5xl lg:text-6xl text-ebony mb-6">
              <span class="bg-gradient-to-r from-sage via-eucalyptus to-gold bg-clip-text text-transparent">
                Un soin énergétique permet
              </span>
              <br />
              <span class="text-ebony">d'apaiser, rééquilibrer et soutenir leur vitalité naturelle</span>
            </h2>
            <div class="w-24 h-1 bg-gradient-to-r from-sage to-gold mx-auto rounded-full"></div>
          </div>

          <!-- Section avec image de fond et contenu -->
          <div class="relative rounded-3xl overflow-hidden shadow-2xl" data-aos="fade-up" data-aos-delay="600">
            <!-- Image de fond -->
            <div class="absolute inset-0">
              <img 
                src="/images/soin-energetique-animal-bien-etre.webp" 
                alt=""
                class="w-full h-full object-cover"
              />
              <!-- Overlay gradient pour la lisibilité -->
              <div class="absolute inset-0 bg-gradient-to-r from-ebony/70 via-ebony/50 to-ebony/30"></div>
            </div>
            
            <!-- Contenu par-dessus -->
            <div class="relative z-10 p-8 md:p-12 lg:p-16">
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <!-- Citation -->
                <div class="text-white" data-aos="fade-right">
                  <div class="p-8 mb-8 inline-block">
                    <blockquote class="text-white font-['Dancing Script'] text-2xl text-center leading-relaxed" style="font-family: 'Dancing Script', cursive;">
                      "Un soin énergétique permet d'apaiser, rééquilibrer et soutenir leur vitalité naturelle, tout en renforçant le lien profond qui vous unit à eux."
                    </blockquote>
                  </div>
                </div>
                
                <!-- Description -->
                <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-8 border border-white/20 shadow-lg" data-aos="fade-left">
                  <div class="space-y-6">
                    <div class="flex items-start space-x-4">
                      <div class="bg-sage/40 p-3 rounded-full">
                        <span class="material-icons text-sage text-2xl">pets</span>
                      </div>
                      <div>
                        <h4 class="font-heading text-xl text-white mb-2">Connexion subtile</h4>
                        <p class="font-body text-white/90 leading-relaxed">
                          Une approche douce qui respecte la sensibilité naturelle de votre animal.
                        </p>
                      </div>
                    </div>
                    
                    <div class="flex items-start space-x-4">
                      <div class="bg-gold/40 p-3 rounded-full">
                        <span class="material-icons text-gold text-2xl">healing</span>
                      </div>
                      <div>
                        <h4 class="font-heading text-xl text-white mb-2">Équilibrage énergétique</h4>
                        <p class="font-body text-white/90 leading-relaxed">
                          Harmonisation des chakras et libération des blocages énergétiques.
                        </p>
                      </div>
                    </div>
                    
                    <div class="flex items-start space-x-4">
                      <div class="bg-eucalyptus/40 p-3 rounded-full">
                        <span class="material-icons text-eucalyptus text-2xl">favorite</span>
                      </div>
                      <div>
                        <h4 class="font-heading text-xl text-white mb-2">Lien renforcé</h4>
                        <p class="font-body text-white/90 leading-relaxed">
                          Renforcement du lien animal-humain dans une relation harmonieuse.
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Ce soin est fait pour votre animal si... - Design moderne -->
    <section class="py-16 bg-gradient-to-br from-white via-cream to-sage/5 relative overflow-hidden">
      <!-- Éléments décoratifs en arrière-plan -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-10 left-10 w-32 h-32 bg-sage rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-10 right-10 w-24 h-24 bg-gold rounded-full blur-2xl animate-bounce"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-6xl mx-auto">
          <!-- Titre principal -->
          <div class="text-center mb-12" data-aos="fade-up">
            <h2 class="font-heading text-4xl md:text-5xl lg:text-6xl text-ebony mb-6">
              <span class="bg-gradient-to-r from-sage via-eucalyptus to-gold bg-clip-text text-transparent">
                Ce soin est fait pour votre animal si...
              </span>
            </h2>
            <div class="w-32 h-1 bg-gradient-to-r from-sage to-gold mx-auto rounded-full mb-8"></div>
            <p class="font-body text-xl text-ebony/80 max-w-3xl mx-auto leading-relaxed">
              Découvrez si les soins énergétiques correspondent aux besoins de votre compagnon.
            </p>
          </div>

          <!-- Grille de cartes responsive -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
            <!-- Carte 1: Stress et anxiété -->
            <div class="group" data-aos="fade-up" data-aos-delay="200">
              <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-6 lg:p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10 h-full">
                <div class="flex items-center space-x-4 mb-4">
                  <div class="bg-gradient-to-br from-sage/20 to-eucalyptus/20 p-3 rounded-full">
                    <span class="material-icons text-sage text-2xl">sentiment_very_dissatisfied</span>
                  </div>
                  <div class="bg-sage text-white px-3 py-1 rounded-full text-sm font-slogan uppercase tracking-wider">
                    Stress
                  </div>
                </div>
                <h3 class="font-heading text-xl lg:text-2xl text-ebony mb-4">Signes de stress</h3>
                <p class="font-body text-ebony leading-relaxed text-sm lg:text-base">
                  Il montre des signes de stress, anxiété ou agitation
                </p>
              </div>
            </div>
            
            <!-- Carte 2: Changements -->
            <div class="group" data-aos="fade-up" data-aos-delay="300">
              <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-6 lg:p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10 h-full">
                <div class="flex items-center space-x-4 mb-4">
                  <div class="bg-gradient-to-br from-eucalyptus/20 to-sage/20 p-3 rounded-full">
                    <span class="material-icons text-eucalyptus text-2xl">moving</span>
                  </div>
                  <div class="bg-eucalyptus text-white px-3 py-1 rounded-full text-sm font-slogan uppercase tracking-wider">
                    Adaptation
                  </div>
                </div>
                <h3 class="font-heading text-xl lg:text-2xl text-ebony mb-4">Période de changement</h3>
                <p class="font-body text-ebony leading-relaxed text-sm lg:text-base">
                  Il traverse une période de changement (déménagement, arrivée d'un autre animal, séparation)
                </p>
              </div>
            </div>
            
            <!-- Carte 3: Douleurs chroniques -->
            <div class="group" data-aos="fade-up" data-aos-delay="400">
              <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-6 lg:p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10 h-full">
                <div class="flex items-center space-x-4 mb-4">
                  <div class="bg-gradient-to-br from-gold/20 to-sage/20 p-3 rounded-full">
                    <span class="material-icons text-gold text-2xl">sick</span>
                  </div>
                  <div class="bg-gold text-white px-3 py-1 rounded-full text-sm font-slogan uppercase tracking-wider">
                    Douleurs
                  </div>
                </div>
                <h3 class="font-heading text-xl lg:text-2xl text-ebony mb-4">Douleurs chroniques</h3>
                <p class="font-body text-ebony leading-relaxed text-sm lg:text-base">
                  Il souffre de douleurs chroniques, fatigue ou perte de vitalité
                </p>
              </div>
            </div>
            
            <!-- Carte 4: Traumatisme -->
            <div class="group" data-aos="fade-up" data-aos-delay="500">
              <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-6 lg:p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10 h-full">
                <div class="flex items-center space-x-4 mb-4">
                  <div class="bg-gradient-to-br from-sage/20 to-eucalyptus/20 p-3 rounded-full">
                    <span class="material-icons text-sage text-2xl">psychology</span>
                  </div>
                  <div class="bg-sage text-white px-3 py-1 rounded-full text-sm font-slogan uppercase tracking-wider">
                    Émotionnel
                  </div>
                </div>
                <h3 class="font-heading text-xl lg:text-2xl text-ebony mb-4">Traumatisme émotionnel</h3>
                <p class="font-body text-ebony leading-relaxed text-sm lg:text-base">
                  Il a vécu un traumatisme ou un choc émotionnel
                </p>
              </div>
            </div>
            
            <!-- Carte 5: Bien-être global -->
            <div class="group md:col-span-2 lg:col-span-1" data-aos="fade-up" data-aos-delay="600">
              <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-6 lg:p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10 h-full">
                <div class="flex items-center space-x-4 mb-4">
                  <div class="bg-gradient-to-br from-eucalyptus/20 to-sage/20 p-3 rounded-full">
                    <span class="material-icons text-eucalyptus text-2xl">health_and_safety</span>
                  </div>
                  <div class="bg-eucalyptus text-white px-3 py-1 rounded-full text-sm font-slogan uppercase tracking-wider">
                    Bien-être
                  </div>
                </div>
                <h3 class="font-heading text-xl lg:text-2xl text-ebony mb-4">Renforcement du bien-être</h3>
                <p class="font-body text-ebony leading-relaxed text-sm lg:text-base">
                  Vous souhaitez renforcer son bien-être global et son équilibre énergétique
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- CTA après "Ce soin est fait pour votre animal si..." -->
      <div class="container mx-auto px-4 relative z-10 mt-12">
        <div class="max-w-4xl mx-auto text-center">
          <div class="bg-gradient-to-br from-sage/10 to-eucalyptus/10 rounded-2xl p-8 border border-sage/20" data-aos="fade-up" data-aos-delay="1000">
            <h3 class="font-heading text-2xl text-ebony mb-4">Votre animal présente ces signes ?</h3>
            <p class="font-body text-ebony/80 mb-4">Il est temps d'agir pour son bien-être naturel !</p>
            <p class="font-body text-ebony/90 mb-6 italic">Un accompagnement respectueux, bienveillant et adapté vous attend.</p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <Button href="/accompagnements/reservation" size="lg" variant="secondary" class="bg-sage text-white hover:bg-eucalyptus">
                <span class="material-icons mr-2">calendar_today</span>
                Réserver un soin pour mon animal
              </Button>
              <Button href="/contact" size="lg" variant="outline" class="border-sage text-sage hover:bg-sage hover:text-white">
                <span class="material-icons mr-2">phone</span>
                Me contacter pour un devis personnalisé
              </Button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Les bénéfices - Design moderne avec grille de cartes -->
    <section class="py-28 relative overflow-hidden">
      <!-- Image de fond -->
      <div class="absolute inset-0">
        <img 
          src="/images/bienfaits-soin-energetique-animal-la-maison-sattvaia.webp" 
          alt=""
          class="w-full h-full object-cover"
        />
        <!-- Overlay gradient pour la lisibilité -->
        <div class="absolute inset-0 bg-gradient-to-br from-white/40 via-white/30 to-sage/5"></div>
      </div>
      
      <!-- Éléments décoratifs en arrière-plan -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-20 right-10 w-2 h-2 bg-sage rounded-full animate-pulse"></div>
        <div class="absolute bottom-40 left-20 w-1 h-1 bg-gold rounded-full animate-bounce"></div>
        <div class="absolute top-1/2 right-1/4 w-3 h-3 bg-eucalyptus rounded-full animate-ping"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-6xl mx-auto">
          <!-- Titre principal -->
          <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="font-heading text-4xl md:text-5xl lg:text-6xl text-ebony mb-6">
              <span class="bg-gradient-to-r from-sage via-eucalyptus to-gold bg-clip-text text-transparent">
                Les bénéfices
              </span>
              <br />
              <span class="text-ebony">des soins énergétiques animaux</span>
            </h2>
            <div class="w-24 h-1 bg-gradient-to-r from-sage to-gold mx-auto rounded-full mb-8"></div>
            <p class="font-body text-xl text-ebony/80 max-w-3xl mx-auto leading-relaxed">
              Découvrez les transformations que votre animal peut vivre grâce à cet accompagnement énergétique.
            </p>
          </div>
                
          <!-- Grille de bénéfices -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
            <!-- Bénéfice 1 -->
            <div class="group" data-aos="fade-up" data-aos-delay="200">
              <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-8 shadow-soft hover:shadow-xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10 h-full">
                <div class="bg-gradient-to-br from-sage/20 to-eucalyptus/20 rounded-full w-16 h-16 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                  <span class="material-icons text-sage text-3xl">psychology</span>
                </div>
                <h3 class="font-heading text-2xl text-ebony mb-4">Apaisement du stress et des émotions</h3>
                <p class="font-body text-ebony leading-relaxed">
                  Votre animal retrouve calme et sérénité face aux situations stressantes.
                </p>
              </div>
            </div>

            <!-- Bénéfice 2 -->
            <div class="group" data-aos="fade-up" data-aos-delay="400">
              <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-8 shadow-soft hover:shadow-xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10 h-full">
                <div class="bg-gradient-to-br from-gold/20 to-sage/20 rounded-full w-16 h-16 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                  <span class="material-icons text-gold text-3xl">healing</span>
                </div>
                <h3 class="font-heading text-2xl text-ebony mb-4">Soulagement des douleurs</h3>
                <p class="font-body text-ebony leading-relaxed">
                  Soulagement des douleurs ou inconforts liés aux blocages énergétiques.
                </p>
              </div>
            </div>
                    
            <!-- Bénéfice 3 -->
            <div class="group" data-aos="fade-up" data-aos-delay="600">
              <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-8 shadow-soft hover:shadow-xl transition-all duration-500 transform hover:-translate-y-2 border border-sage/10 h-full">
                <div class="bg-gradient-to-br from-eucalyptus/20 to-sage/20 rounded-full w-16 h-16 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                  <span class="material-icons text-eucalyptus text-3xl">bedtime</span>
                </div>
                <h3 class="font-heading text-2xl text-ebony mb-4">Amélioration du sommeil et de la vitalité</h3>
                <p class="font-body text-ebony leading-relaxed">

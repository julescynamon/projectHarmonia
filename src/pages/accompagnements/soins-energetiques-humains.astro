    <!-- Détails pratiques -->
    <section id="details" class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="font-heading text-3xl md:text-4xl text-ebony text-center mb-12" data-aos="fade-up">
            Détails pratiques
          </h2>
          
          <div class="bg-cream rounded-2xl p-8 shadow-soft" data-aos="fade-up">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
              <div class="text-center">
                <div class="bg-sage/20 p-4 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                  <span class="material-icons text-sage text-2xl">schedule</span>
                </div>
                <h3 class="font-heading text-xl text-ebony mb-2">Durée</h3>
                <p class="font-body text-ebony">1h</p>
              </div>
              
              <div class="text-center">
                <div class="bg-sage/20 p-4 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                  <span class="material-icons text-sage text-2xl">home</span>
                </div>
                <h3 class="font-heading text-xl text-ebony mb-2">Format</h3>
                <p class="font-body text-ebony">Présentiel ou à distance</p>
              </div>
              
              <div class="text-center">
                <div class="bg-sage/20 p-4 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                  <span class="material-icons text-sage text-2xl">euro</span>
                </div>
                <h3 class="font-heading text-xl text-ebony mb-2">Tarif</h3>
                <p class="font-body text-ebony">60€</p>

---
import MainLayout from '../../layouts/MainLayout.astro';
import { pageSEO } from '../../lib/seo';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import NewsletterForm from '../../components/NewsletterForm.astro';
import { supabase } from '../../lib/supabase';
import { BLOG_CATEGORIES } from '../../lib/constants';

// D√©sactiver le prerendering pour une mise √† jour dynamique
export const prerender = false;

const seo = pageSEO.blog;

// R√©cup√©rer tous les articles de blog depuis Supabase
// R√©cup√©rer la cat√©gorie depuis l'URL si elle existe
const category = Astro.url.searchParams.get('category');

// Construire la requ√™te Supabase
let query = supabase
  .from('posts')
  .select('*')
  .eq('status', 'published')
  .order('published_at', { ascending: false });

// Filtrer par cat√©gorie si sp√©cifi√©e
if (category) {
  query = query.eq('category', category);
}

const { data: posts, error } = await query;

if (error) {
  console.error('Erreur lors de la r√©cup√©ration des articles:', error);
}

// Cat√©gories uniques pour le filtre
// Utilisation des constantes centralis√©es
const categories = BLOG_CATEGORIES;

// Formater la date
function formatDate(dateStr: string) {
  return new Date(dateStr).toLocaleDateString('fr-FR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<MainLayout title={seo.title} description={seo.description}>
  <!-- Hero Section Impact -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background avec image et overlay -->
    <div class="absolute inset-0">
      <img 
        src="/images/heroblogbg.webp" 
        alt="Blog La Maison Sattva√Øa - Articles naturopathie et bien-√™tre"
        class="w-full h-full object-cover scale-110 transform motion-safe:animate-subtle-zoom"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-ebony/40 via-ebony/20 to-ebony/10"></div>
    </div>
    
    <!-- √âl√©ments d√©coratifs -->
    <div class="absolute inset-0 z-10 pointer-events-none overflow-hidden">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[180%] h-[180%] opacity-20 motion-safe:animate-slow-spin">
        <img
          src="/images/sacred-geometry.svg"
          alt=""
          class="w-full h-full"
          loading="eager"
        />
      </div>
    </div>
    
    <!-- Contenu principal centr√© -->
    <div class="container mx-auto px-4 relative z-20 flex flex-col justify-center min-h-screen">
      <div class="max-w-5xl mx-auto text-center">
        <!-- En-t√™te centr√© -->
        <div class="motion-safe:animate-fade-in mb-[206px]">
          <div class="inline-block mb-6">
            <span class="bg-gradient-to-r from-sage to-gold bg-clip-text text-transparent font-slogan text-xl font-semibold uppercase tracking-wider">
              Le Blog de La Maison Sattva√Øa
            </span>
          </div>
          
          <h1 class="font-heading text-5xl md:text-6xl lg:text-7xl mb-8 leading-tight text-ebony drop-shadow-[0_2px_8px_rgba(255,255,255,0.3)]" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="400">
            D√©couvrez nos
            <span class="block text-sage mt-4 text-3xl md:text-4xl lg:text-5xl">Articles & Conseils</span>
          </h1>
          
          <p class="font-slogan text-xl md:text-2xl mb-12 text-ebony/80 leading-relaxed max-w-4xl mx-auto drop-shadow-[0_2px_4px_rgba(255,255,255,0.2)] italic" data-aos="fade-up" data-aos-duration="800" data-aos-delay="600">
            "Des conseils pour prendre soin de l‚Äôhumain, de l‚Äôanimal et de l‚Äô√¢me, au naturel et en profondeur."
          </p>
        </div>
        
      </div>
    </div>
    
    <!-- Transition brush effect -->
    <div class="absolute bottom-0 left-0 w-full z-30 transition-divider">
      <div class="absolute inset-0 bg-gradient-to-b from-transparent to-cream"></div>
      <img 
        src="/images/brush-divider.svg" 
        alt=""
        class="w-full h-auto min-h-[80px] object-cover transform motion-safe:animate-wave"
        loading="lazy"
      />
    </div>
  </section>

  <!-- Section Articles -->
  <section class="py-20 md:py-32 bg-gradient-to-b from-cream to-white relative overflow-hidden">
    <!-- √âl√©ments d√©coratifs -->
    <div class="absolute top-0 left-0 w-72 h-72 bg-sage/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-gold/5 rounded-full blur-3xl"></div>
    <div class="absolute inset-0 opacity-3">
      <img src="/images/sacred-geometry.svg" alt="Geometric pattern" class="w-full h-full object-cover bg-gradient-to-r from-sage/20 to-gold/20 bg-clip-content">
    </div>
    
    <div class="container mx-auto px-4 relative">
      <!-- En-t√™te de section -->
      <div class="text-center max-w-4xl mx-auto mb-20" data-aos="fade-up" data-aos-duration="1000">
        <div class="inline-block mb-6">
          <span class="bg-gradient-to-r from-sage to-gold bg-clip-text text-transparent font-slogan text-lg font-semibold uppercase tracking-wider">
            Explorez nos articles

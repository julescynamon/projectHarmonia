---
export const prerender = false;

import MainLayout from '../layouts/MainLayout.astro';
import Hero from '../components/Hero.astro';
import Dimensions from '../components/Dimensions.astro';
import About from '../components/About.astro';
import ResultsTestimonials from '../components/ResultsTestimonials.astro';
import RecentPosts from '../components/RecentPosts.astro';
import FinalCTA from '../components/FinalCTA.astro';
import { pageSEO } from '../lib/seo';

const seo = pageSEO.home;
---

<MainLayout 
  title={seo.title}
  description={seo.description}
  image={seo.image}
>
  <!-- Hero Section - Déjà parfait -->
  <div class="relative">
    <Hero />
  </div>

  <!-- Dimensions - Section originale remise -->
  <div class="relative">
    <Dimensions />
  </div>

  <!-- À Propos - Refonte complète avec storytelling -->
  <div class="relative">
    <About />
  </div>

  <!-- Résultats & Témoignages - Fusion stats + témoignages -->
  <div class="relative">
    <ResultsTestimonials />
  </div>
  
  <!-- Articles de blog - Section conservée intégralement -->
  <div class="relative">
    <RecentPosts />
  </div>
  
  <!-- CTA Final - Refonte ultra-impactante -->
  <div class="relative">
    <FinalCTA />
  </div>

</MainLayout>
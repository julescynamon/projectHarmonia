---
// src/pages/mentions-legales.astro
import MainLayout from '../layouts/MainLayout.astro';
import { pageSEO } from '../lib/seo';

const seo = pageSEO.mentionsLegales;

const contactInfo = {
  name: 'Naima Tyzra',
  businessName: 'La Maison Sattvaïa',
  address: '30760 Salazac',
  email: 'tyzranaima@gmail.com',
  phone: '07 67 22 97 43',
  siret: 'À compléter selon votre situation',
  rcs: 'À compléter selon votre situation',
  capital: 'À compléter selon votre situation',
  tva: 'À compléter selon votre situation'
};

const hostInfo = {
  name: 'Vercel Inc.',
  address: '340 S Lemon Ave #4133, Walnut, CA 91789, États-Unis',
  website: 'https://vercel.com'
};
---

<MainLayout title={seo.title} description={seo.description}>
  <!-- Hero Section -->
  <section class="relative py-20 md:py-32 bg-gradient-to-br from-sage/10 via-white to-gold/5 overflow-hidden">
    <div class="absolute top-10 right-10 w-64 h-64 bg-sage/5 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-10 left-10 w-80 h-80 bg-gold/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    
    <div class="container mx-auto px-4 relative">
      <div class="text-center max-w-4xl mx-auto" data-aos="fade-up" data-aos-duration="1000">
        <div class="inline-block mb-6">
          <span class="bg-gradient-to-r from-sage to-gold bg-clip-text text-transparent font-slogan text-lg font-semibold uppercase tracking-wider">
            Informations légales
          </span>
        </div>
        <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl text-ebony mb-8 leading-tight">
          Mentions <span class="text-sage">Légales</span>
        </h1>
        <p class="font-slogan text-xl text-eucalyptus leading-relaxed">
          Informations légales et conditions d'utilisation du site La Maison Sattvaïa
        </p>
      </div>
    </div>
  </section>

  <!-- Contenu principal -->
  <section class="py-20 md:py-32 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        
        <!-- 1. Identification de l'éditeur -->
        <div class="mb-16" data-aos="fade-up" data-aos-duration="800">
          <div class="bg-gradient-to-r from-sage/10 to-gold/10 rounded-3xl p-8 lg:p-12 border border-sage/20">
            <h2 class="font-heading text-3xl text-ebony mb-8 flex items-center gap-4">
              <span class="w-12 h-12 bg-gradient-to-r from-sage to-gold rounded-full flex items-center justify-center text-white font-bold text-xl">1</span>
              Éditeur du site
            </h2>
            <div class="space-y-4 text-eucalyptus leading-relaxed">
              <p><strong class="text-ebony">Nom :</strong> {contactInfo.name}</p>
              <p><strong class="text-ebony">Dénomination commerciale :</strong> {contactInfo.businessName}</p>
              <p><strong class="text-ebony">Adresse :</strong> {contactInfo.address}</p>
              <p><strong class="text-ebony">Téléphone :</strong> <a href={`tel:${contactInfo.phone.replace(/\s/g, '')}`} class="text-sage hover:text-gold transition-colors">{contactInfo.phone}</a></p>
              <p><strong class="text-ebony">Email :</strong> <a href={`mailto:${contactInfo.email}`} class="text-sage hover:text-gold transition-colors">{contactInfo.email}</a></p>
              <p><strong class="text-ebony">SIRET :</strong> {contactInfo.siret}</p>
              <p><strong class="text-ebony">RCS :</strong> {contactInfo.rcs}</p>
              <p><strong class="text-ebony">Capital social :</strong> {contactInfo.capital}</p>
              <p><strong class="text-ebony">TVA intracommunautaire :</strong> {contactInfo.tva}</p>
            </div>
          </div>
        </div>

        <!-- 2. Directeur de publication -->
        <div class="mb-16" data-aos="fade-up" data-aos-duration="800" data-aos-delay="100">
          <div class="bg-gradient-to-r from-gold/10 to-sage/10 rounded-3xl p-8 lg:p-12 border border-gold/20">
            <h2 class="font-heading text-3xl text-ebony mb-8 flex items-center gap-4">
              <span class="w-12 h-12 bg-gradient-to-r from-gold to-sage rounded-full flex items-center justify-center text-white font-bold text-xl">2</span>
              Directeur de publication
            </h2>
            <div class="space-y-4 text-eucalyptus leading-relaxed">
              <p><strong class="text-ebony">Directeur de publication :</strong> {contactInfo.name}</p>
              <p><strong class="text-ebony">Contact :</strong> <a href={`mailto:${contactInfo.email}`} class="text-sage hover:text-gold transition-colors">{contactInfo.email}</a></p>
            </div>
          </div>
        </div>

        <!-- 3. Hébergement -->
        <div class="mb-16" data-aos="fade-up" data-aos-duration="800" data-aos-delay="200">
          <div class="bg-gradient-to-r from-eucalyptus/10 to-sage/10 rounded-3xl p-8 lg:p-12 border border-eucalyptus/20">
            <h2 class="font-heading text-3xl text-ebony mb-8 flex items-center gap-4">
              <span class="w-12 h-12 bg-gradient-to-r from-eucalyptus to-sage rounded-full flex items-center justify-center text-white font-bold text-xl">3</span>
              Hébergement
            </h2>
            <div class="space-y-4 text-eucalyptus leading-relaxed">
              <p><strong class="text-ebony">Hébergeur :</strong> {hostInfo.name}</p>
              <p><strong class="text-ebony">Adresse :</strong> {hostInfo.address}</p>
              <p><strong class="text-ebony">Site web :</strong> <a href={hostInfo.website} target="_blank" rel="noopener noreferrer" class="text-sage hover:text-gold transition-colors">{hostInfo.website}</a></p>
            </div>
          </div>
        </div>

        <!-- 4. Propriété intellectuelle -->
        <div class="mb-16" data-aos="fade-up" data-aos-duration="800" data-aos-delay="300">
          <div class="bg-gradient-to-r from-sage/10 to-eucalyptus/10 rounded-3xl p-8 lg:p-12 border border-sage/20">
            <h2 class="font-heading text-3xl text-ebony mb-8 flex items-center gap-4">
              <span class="w-12 h-12 bg-gradient-to-r from-sage to-eucalyptus rounded-full flex items-center justify-center text-white font-bold text-xl">4</span>
              Propriété intellectuelle
            </h2>
            <div class="space-y-6 text-eucalyptus leading-relaxed">
              <p>L'ensemble de ce site relève de la législation française et internationale sur le droit d'auteur et la propriété intellectuelle. Tous les droits de reproduction sont réservés, y compris pour les documents téléchargeables et les représentations iconographiques et photographiques.</p>
              <p>La reproduction de tout ou partie de ce site sur un support électronique quel qu'il soit est formellement interdite sauf autorisation expresse du directeur de la publication.</p>
              <p>La marque et le logo de La Maison Sattvaïa sont des marques déposées. Toute reproduction non autorisée de ces marques, dessins et modèles constitue une contrefaçon passible de sanctions pénales.</p>
            </div>
          </div>
        </div>

        <!-- 5. Protection des données personnelles -->
        <div class="mb-16" data-aos="fade-up" data-aos-duration="800" data-aos-delay="400">
          <div class="bg-gradient-to-r from-gold/10 to-eucalyptus/10 rounded-3xl p-8 lg:p-12 border border-gold/20">
            <h2 class="font-heading text-3xl text-ebony mb-8 flex items-center gap-4">
              <span class="w-12 h-12 bg-gradient-to-r from-gold to-eucalyptus rounded-full flex items-center justify-center text-white font-bold text-xl">5</span>
              Protection des données personnelles (RGPD)
            </h2>
            <div class="space-y-6 text-eucalyptus leading-relaxed">
              <p><strong class="text-ebony">Responsable du traitement :</strong> {contactInfo.name} - {contactInfo.email}</p>
              
              <div>
                <h3 class="font-heading text-xl text-ebony mb-4">Données collectées</h3>
                <p>Nous collectons les données personnelles que vous nous communiquez volontairement lors de :</p>
                <ul class="list-disc list-inside mt-4 space-y-2 ml-4">
                  <li>L'utilisation du formulaire de contact</li>
                  <li>La prise de rendez-vous</li>
                  <li>L'inscription à la newsletter</li>
                  <li>L'achat de services ou produits</li>
                </ul>
              </div>

              <div>
                <h3 class="font-heading text-xl text-ebony mb-4">Finalités du traitement</h3>
                <p>Vos données sont utilisées pour :</p>
                <ul class="list-disc list-inside mt-4 space-y-2 ml-4">
                  <li>Répondre à vos demandes de contact</li>
                  <li>Gérer vos rendez-vous</li>
                  <li>Vous envoyer des informations sur nos services</li>
                  <li>Améliorer nos services</li>
                </ul>
              </div>

              <div>
                <h3 class="font-heading text-xl text-ebony mb-4">Vos droits</h3>
                <p>Conformément au RGPD, vous disposez des droits suivants :</p>
                <ul class="list-disc list-inside mt-4 space-y-2 ml-4">
                  <li>Droit d'accès à vos données</li>
                  <li>Droit de rectification</li>
                  <li>Droit à l'effacement</li>
                  <li>Droit à la portabilité</li>
                  <li>Droit d'opposition</li>
                </ul>
                <p class="mt-4">Pour exercer ces droits, contactez-nous à : <a href={`mailto:${contactInfo.email}`} class="text-sage hover:text-gold transition-colors">{contactInfo.email}</a></p>
              </div>

              <div>
                <h3 class="font-heading text-xl text-ebony mb-4">Conservation des données</h3>
                <p>Vos données sont conservées pendant la durée nécessaire aux finalités pour lesquelles elles ont été collectées, et conformément aux obligations légales.</p>
              </div>
            </div>
          </div>
        </div>

        <!-- 6. Cookies -->
        <div class="mb-16" data-aos="fade-up" data-aos-duration="800" data-aos-delay="500">
          <div class="bg-gradient-to-r from-eucalyptus/10 to-gold/10 rounded-3xl p-8 lg:p-12 border border-eucalyptus/20">
            <h2 class="font-heading text-3xl text-ebony mb-8 flex items-center gap-4">
              <span class="w-12 h-12 bg-gradient-to-r from-eucalyptus to-gold rounded-full flex items-center justify-center text-white font-bold text-xl">6</span>
              Cookies
            </h2>
            <div class="space-y-6 text-eucalyptus leading-relaxed">
              <p>Ce site utilise des cookies pour améliorer votre expérience de navigation et analyser le trafic du site.</p>
              
              <div>
                <h3 class="font-heading text-xl text-ebony mb-4">Types de cookies utilisés</h3>
                <ul class="list-disc list-inside mt-4 space-y-2 ml-4">
                  <li><strong>Cookies essentiels :</strong> Nécessaires au fonctionnement du site</li>
                  <li><strong>Cookies analytiques :</strong> Pour analyser l'utilisation du site</li>
                  <li><strong>Cookies de préférences :</strong> Pour mémoriser vos choix</li>
                </ul>
              </div>

              <p>Vous pouvez gérer vos préférences de cookies via les paramètres de votre navigateur. La désactivation de certains cookies peut affecter le fonctionnement du site.</p>
            </div>
          </div>
        </div>

        <!-- 7. Droit applicable -->
        <div class="mb-16" data-aos="fade-up" data-aos-duration="800" data-aos-delay="600">
          <div class="bg-gradient-to-r from-sage/10 to-gold/10 rounded-3xl p-8 lg:p-12 border border-sage/20">
            <h2 class="font-heading text-3xl text-ebony mb-8 flex items-center gap-4">
              <span class="w-12 h-12 bg-gradient-to-r from-sage to-gold rounded-full flex items-center justify-center text-white font-bold text-xl">7</span>
              Droit applicable et juridiction
            </h2>
            <div class="space-y-6 text-eucalyptus leading-relaxed">
              <p>Le présent site est soumis au droit français. En cas de litige, les tribunaux français seront seuls compétents.</p>
              <p>L'utilisation du présent site implique l'acceptation pleine et entière des conditions générales d'utilisation décrites ci-dessus.</p>
            </div>
          </div>
        </div>

        <!-- 8. Contact -->
        <div class="mb-16" data-aos="fade-up" data-aos-duration="800" data-aos-delay="700">
          <div class="bg-gradient-to-r from-gold/10 to-sage/10 rounded-3xl p-8 lg:p-12 border border-gold/20">
            <h2 class="font-heading text-3xl text-ebony mb-8 flex items-center gap-4">
              <span class="w-12 h-12 bg-gradient-to-r from-gold to-sage rounded-full flex items-center justify-center text-white font-bold text-xl">8</span>
              Contact
            </h2>
            <div class="space-y-6 text-eucalyptus leading-relaxed">
              <p>Pour toute question concernant ces mentions légales ou le site, vous pouvez nous contacter :</p>
              <div class="bg-white/50 rounded-2xl p-6 mt-6">
                <div class="space-y-4">
                  <div class="flex items-center gap-4">
                    <span class="material-icons text-sage text-xl">email</span>
                    <a href={`mailto:${contactInfo.email}`} class="text-eucalyptus hover:text-gold transition-colors font-medium">{contactInfo.email}</a>
                  </div>
                  <div class="flex items-center gap-4">
                    <span class="material-icons text-sage text-xl">phone</span>
                    <a href={`tel:${contactInfo.phone.replace(/\s/g, '')}`} class="text-eucalyptus hover:text-gold transition-colors font-medium">{contactInfo.phone}</a>
                  </div>
                  <div class="flex items-center gap-4">
                    <span class="material-icons text-sage text-xl">location_on</span>
                    <span class="text-eucalyptus font-medium">{contactInfo.address}</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Note importante -->
        <div class="bg-gradient-to-r from-amber-50 to-orange-50 border-l-4 border-amber-400 p-6 rounded-r-2xl" data-aos="fade-up" data-aos-duration="800" data-aos-delay="800">
          <div class="flex items-start gap-4">
            <span class="material-icons text-amber-600 text-2xl">info</span>
            <div>
              <h3 class="font-heading text-lg text-amber-800 mb-2">Note importante</h3>
              <p class="text-amber-700 leading-relaxed">
                Ces mentions légales sont fournies à titre informatif. Pour une conformité juridique complète, 
                il est recommandé de consulter un avocat spécialisé en droit du numérique et de la santé.
              </p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 md:py-32 bg-gradient-to-r from-sage/10 via-gold/5 to-sage/10 relative overflow-hidden">
    <div class="absolute top-10 right-10 w-64 h-64 bg-gold/5 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-10 left-10 w-80 h-80 bg-sage/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    
    <div class="container mx-auto px-4 relative">
      <div class="text-center max-w-4xl mx-auto" data-aos="fade-up" data-aos-duration="1000">
        <h2 class="font-heading text-3xl md:text-4xl text-ebony mb-8">
          Une question sur nos <span class="text-sage">services</span> ?
        </h2>
        <p class="font-slogan text-xl text-eucalyptus mb-12 leading-relaxed">
          N'hésitez pas à nous contacter pour toute information complémentaire
        </p>
        <div class="flex justify-center">
          <a href="/contact" class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-sage to-eucalyptus text-white font-semibold rounded-full hover:from-eucalyptus hover:to-sage transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
            <span class="material-icons mr-2">email</span>
            Nous contacter
          </a>
        </div>
      </div>
    </div>
  </section>

</MainLayout>
